    <!-- Planificador Semanal Horizontal -->
    <div class="mt-8 bg-slate-900 border border-slate-800 rounded-2xl shadow-xl overflow-hidden">
        <div class="p-5 border-b border-slate-800 flex justify-between items-center bg-slate-900/50">
            <h2 class="text-lg font-semibold text-white flex items-center gap-2">
                <i class="ph ph-calendar-blank text-slate-400"></i>
                Planificador Semanal
            </h2>
            <a href="/calendario" class="text-xs text-slate-400 hover:text-white transition-colors bg-slate-800 px-2 py-1 rounded border border-slate-700">Ver Calendario</a>
        </div>
        
        <div class="overflow-x-auto">
            <% 
            // Generar días de la semana actual (Lunes a Domingo)
            const today = new Date();
            today.setHours(0,0,0,0);
            
            const d = today.getDay(); // 0=Dom, 1=Lun
            const diff = today.getDate() - d + (d === 0 ? -6 : 1); // Ajustar al lunes
            const monday = new Date(today);
            monday.setDate(diff);
            
            const weekDays = [];
            for(let i=0; i<7; i++) {
                const day = new Date(monday);
                day.setDate(monday.getDate() + i);
                weekDays.push(day);
            }
            %>
            <div class="grid grid-cols-7 min-w-[1000px] divide-x divide-slate-800 border-b border-slate-800 last:border-0">
                <% weekDays.forEach((day, index) => { 
                    const dayStr = day.toLocaleDateString('es-ES', { weekday: 'long' });
                    const isPast = day < today;
                    const isToday = day.getTime() === today.getTime();
                    const isSunday = day.getDay() === 0;
                    
                    // Filtrar eventos de este día
                    const dayEvents = (typeof events !== 'undefined' ? events : []).filter(e => {
                        const eDate = new Date(e.fecha);
                        return eDate.getDate() === day.getDate() && 
                               eDate.getMonth() === day.getMonth() && 
                               eDate.getFullYear() === day.getFullYear();
                    });
                %>
                    <div class="flex flex-col min-h-[250px] <%= isPast ? 'bg-slate-900/30' : 'bg-slate-900' %>">
                        <!-- Header del día -->
                        <div class="p-3 text-center border-b border-slate-800 <%= isToday ? 'bg-orange-500/10' : 'bg-slate-800/30' %>">
                            <span class="block text-xs uppercase font-bold mb-1 <%= isToday ? 'text-orange-400' : (isSunday ? 'text-red-400' : 'text-slate-400') %>">
                                <%= dayStr %>
                            </span>
                            <span class="block text-xl font-bold <%= isToday ? 'text-white' : 'text-slate-300' %>">
                                <%= day.getDate() %>
                            </span>
                        </div>
                        
                        <!-- Lista de eventos -->
                        <div class="p-2 flex-1 space-y-2">
                            <% if (dayEvents.length > 0) { %>
                                <% 
                                // Función auxiliar para convertir hora HH:MM a minutos
                                const getMins = (t) => {
                                    if (!t) return 0;
                                    const [h, m] = t.split(':').map(Number);
                                    return h * 60 + m;
                                };

                                dayEvents.forEach((event, index) => { 
                                %>
                                    <div class="p-2 rounded bg-slate-800 border border-slate-700 hover:border-orange-500/50 transition-colors group relative cursor-help z-10" title="<%= event.descripcion || event.titulo %>">
                                        <div class="text-xs font-semibold text-slate-200 truncate <%= isPast ? 'line-through opacity-50' : '' %>">
                                            <%= event.titulo %>
                                        </div>
                                        <% if (event.hora_inicio) { %>
                                            <div class="text-[10px] text-slate-400 mt-1 flex items-center gap-1">
                                                <i class="ph ph-clock"></i>
                                                <%= event.hora_inicio.slice(0,5) %>
                                                <% if (event.hora_fin) { %> - <%= event.hora_fin.slice(0,5) %> <% } %>
                                            </div>
                                        <% } %>
                                    </div>

                                    <% 
                                     // Lógica para mostrar espacios de tiempo entre eventos
                                     if (index < dayEvents.length - 1) {
                                         const nextEvent = dayEvents[index + 1];
                                         
                                         const startMins = getMins(event.hora_inicio);
                                         // Si no hay hora fin, asumimos 30 min de duración por defecto para permitir ver huecos más fácilmente
                                         const endMins = event.hora_fin ? getMins(event.hora_fin) : (startMins + 30);
                                         const nextStartMins = getMins(nextEvent.hora_inicio);
                                         
                                         // Calcular horas completas en el intervalo
                                         const firstHour = Math.ceil(endMins / 60);
                                         const lastHour = Math.floor((nextStartMins - 1) / 60);
                                         
                                         // Solo mostrar si hay un hueco real (más de 15 min por ejemplo)
                                         if (nextStartMins - endMins > 15) {
                                             for (let h = firstHour; h <= lastHour; h++) {
                                                 const hourMins = h * 60;
                                                 // Asegurar que la hora está estrictamente entre el fin del actual y el inicio del siguiente
                                                 // Permitimos igual al fin si queremos marcar el inicio del tiempo libre
                                                 if (hourMins >= endMins && hourMins < nextStartMins) {
                                                     const hourStr = `${h.toString().padStart(2, '0')}:00`;
                                     %>
                                                     <div class="flex items-center gap-2 py-1 opacity-40 select-none group/divider">
                                                         <div class="h-px bg-slate-700 flex-1 border-t border-dashed border-slate-700 group-hover/divider:border-slate-500 transition-colors"></div>
                                                         <span class="text-[10px] font-mono text-slate-500 group-hover/divider:text-slate-400 transition-colors"><%= hourStr %></span>
                                                         <div class="h-px bg-slate-700 flex-1 border-t border-dashed border-slate-700 group-hover/divider:border-slate-500 transition-colors"></div>
                                                     </div>
                                     <%
                                                 }
                                             }
                                         }
                                     }
                                     %>
                                <% }); %>
                            <% } %>
                        </div>
                        
                        <!-- Footer de notas (simulado) -->
                        <div class="p-2 border-t border-slate-800/50 mt-auto">
                             <div class="border border-dashed border-slate-800 rounded bg-slate-900/50 p-1 min-h-[40px] flex items-center justify-center">
                                <span class="text-[10px] text-slate-700 italic">Notas</span>
                             </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>
</div>

<!-- Scripts reused from previous version -->
<script>
let currentTicketId = null;
let currentTicketStatus = null;

const TICKET_PHASES = [
    { 
        id: 'ingresado', 
        label: 'Ingresado', 
        icon: 'ph-file-text',
        style: {
            active: 'bg-slate-500 ring-slate-500 shadow-slate-500/30',
            completed: 'text-slate-400 border-slate-500/50',
            text: 'text-slate-400',
            badge: 'bg-slate-500/10 text-slate-400 border-slate-500/20'
        }
    },
    { 
        id: 'diagnostico', 
        label: 'Diagnóstico', 
        icon: 'ph-stethoscope',
        style: {
            active: 'bg-blue-500 ring-blue-500 shadow-blue-500/30',
            completed: 'text-blue-400 border-blue-500/50',
            text: 'text-blue-400',
            badge: 'bg-blue-500/10 text-blue-400 border-blue-500/20'
        }
    },
    { 
        id: 'presupuesto', 
        label: 'Presupuesto', 
        icon: 'ph-currency-dollar',
        style: {
            active: 'bg-amber-500 ring-amber-500 shadow-amber-500/30',
            completed: 'text-amber-400 border-amber-500/50',
            text: 'text-amber-400',
            badge: 'bg-amber-500/10 text-amber-400 border-amber-500/20'
        }
    },
    { 
        id: 'reparacion', 
        label: 'Reparación', 
        icon: 'ph-wrench',
        style: {
            active: 'bg-orange-500 ring-orange-500 shadow-orange-500/30',
            completed: 'text-orange-400 border-orange-500/50',
            text: 'text-orange-400',
            badge: 'bg-orange-500/10 text-orange-400 border-orange-500/20'
        }
    },
    { 
        id: 'observacion', 
        label: 'Observación', 
        icon: 'ph-eye',
        style: {
            active: 'bg-purple-500 ring-purple-500 shadow-purple-500/30',
            completed: 'text-purple-400 border-purple-500/50',
            text: 'text-purple-400',
            badge: 'bg-purple-500/10 text-purple-400 border-purple-500/20'
        }
    },
    { 
        id: 'terminado', 
        label: 'Terminado', 
        icon: 'ph-check-circle',
        style: {
            active: 'bg-emerald-500 ring-emerald-500 shadow-emerald-500/30',
            completed: 'text-emerald-400 border-emerald-500/50',
            text: 'text-emerald-400',
            badge: 'bg-emerald-500/10 text-emerald-400 border-emerald-500/20'
        }
    }
];

async function updateTicketStatus(newStatus) {
    if (!currentTicketId) return;
    
    // Pedir comentario opcional
    const comentario = prompt(`¿Cambiar estado a "${newStatus.toUpperCase()}"?\n\nIngresa un comentario (opcional):`);
    if (comentario === null) return; // Cancelado por el usuario

    try {
        const res = await fetch(`/tickets/${currentTicketId}/estado`, {
            method: 'PATCH',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ 
                estado: newStatus,
                comentario: comentario 
            })
        });
        
        if (res.ok) {
            const data = await res.json();
            currentTicketStatus = data.ticket.estado;
            renderPipeline(currentTicketStatus);
            document.getElementById('ticket-details-estado').textContent = currentTicketStatus;
            
            // Recargar pagina si cambia a terminado para actualizar tabla
            if (newStatus === 'terminado') {
                window.location.reload();
            } else {
                // Si hubo comentario, recargar comentarios si la funcion existe en este scope
                if (typeof loadTicketComments === 'function' && comentario && comentario.trim()) {
                    loadTicketComments(currentTicketId);
                }
            }
        } else {
            alert('Error al actualizar estado');
        }
    } catch (e) {
        console.error(e);
        alert('Error de conexión');
    }
}

function renderPipeline(currentStatus) {
    const container = document.getElementById('ticket-pipeline');
    if (!container) return;
    container.innerHTML = '';

    // Mapeo simple para estados antiguos
    let statusToUse = currentStatus;
    if (currentStatus === 'pendiente') statusToUse = 'ingresado';
    if (currentStatus === 'en_proceso') statusToUse = 'reparacion';
    if (currentStatus === 'hecho') statusToUse = 'terminado';

    const currentIndex = TICKET_PHASES.findIndex(p => p.id === statusToUse);
    // Si no coincide (ej. estado legacy raro), default a 0
    const activeIndex = currentIndex === -1 ? 0 : currentIndex;

    TICKET_PHASES.forEach((phase, index) => {
        const isCompleted = index < activeIndex;
        const isActive = index === activeIndex;
        
        const step = document.createElement('div');
        step.className = `flex flex-col items-center gap-1 relative z-10 cursor-pointer group`;
        step.onclick = () => updateTicketStatus(phase.id);

        let circleClass = '';
        let iconClass = '';
        let textClass = '';

        if (isActive) {
            circleClass = `w-8 h-8 rounded-full flex items-center justify-center text-white shadow-lg ring-2 ring-offset-2 ring-offset-slate-900 transition-all transform scale-110 ${phase.style.active}`;
            iconClass = `ph ${phase.icon} text-lg`;
            textClass = `text-[10px] font-bold mt-1 uppercase tracking-wide ${phase.style.text}`;
        } else if (isCompleted) {
            circleClass = `w-8 h-8 rounded-full flex items-center justify-center bg-slate-800 border hover:bg-slate-700 transition-colors ${phase.style.completed}`;
            iconClass = `ph ${phase.icon} text-lg`;
            textClass = `text-[10px] font-medium text-slate-400 mt-1 group-hover:text-slate-300`;
        } else {
            // Future
            circleClass = `w-8 h-8 rounded-full flex items-center justify-center bg-slate-800/50 text-slate-600 border border-slate-700 hover:border-slate-600 hover:text-slate-500 transition-colors`;
            iconClass = `ph ${phase.icon} text-lg`;
            textClass = `text-[10px] font-medium text-slate-600 mt-1`;
        }

        step.innerHTML = `
            <div class="${circleClass}">
                <i class="${iconClass}"></i>
            </div>
            <span class="${textClass}">${phase.label}</span>
        `;
        
        container.appendChild(step);
    });
    
    // Dibujar linea de fondo
    const line = document.createElement('div');
    line.className = 'absolute top-4 left-0 w-full h-0.5 bg-slate-800 -z-0';
    container.style.position = 'relative'; // Asegurar posicionamiento
    container.insertBefore(line, container.firstChild);
}

async function finishTicket(id) {
    if(!confirm('¿Marcar este ticket como terminado?')) return;
    try {
        const res = await fetch(`/tickets/${id}/estado`, {
            method: 'PATCH',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ estado: 'hecho' })
        });
        if (res.ok) {
            window.location.reload();
        } else {
            let msg = 'Error al marcar como terminado';
            try {
                const data = await res.json();
                if (data && data.error) msg = data.error;
            } catch {}
            alert(msg);
        }
    } catch (e) {
        console.error(e);
        alert('Error de conexión');
    }
}

async function openTicketDetails(id) {
    currentTicketId = id;
    try {
        const res = await fetch(`/tickets/${id}`);
        if (!res.ok) {
            alert('Error al cargar el ticket');
            return;
        }
        const t = await res.json();
        document.getElementById('ticket-details-title').textContent = t.titulo || '';
        
        // Actualizar estado global y renderizar pipeline
        currentTicketStatus = t.estado || 'ingresado';
        document.getElementById('ticket-details-estado').textContent = currentTicketStatus;
        renderPipeline(currentTicketStatus);

        document.getElementById('ticket-details-codigo').textContent = t.codigo || '-';
        
        const tipoMap = {
            mantencion_preventiva: 'M. Preventiva (MP)',
            mantencion_correctiva: 'M. Correctiva (MC)',
            visita_tecnica: 'Visita Técnica (VT)'
        };
        document.getElementById('ticket-details-tipo').textContent = tipoMap[t.tipo] || (t.tipo || '-');

        document.getElementById('ticket-details-creado').textContent = t.creado_por_nombre || 'Desconocido';
        document.getElementById('ticket-details-asignado').textContent = t.asignado_a_nombre || 'Sin asignar';
        document.getElementById('ticket-details-cliente').textContent = t.cliente_nombre || '-';
        document.getElementById('ticket-details-equipo').textContent = t.equipo_nombre || '-';
        document.getElementById('ticket-details-equipo-marca').textContent = t.equipo_marca || '-';
        document.getElementById('ticket-details-equipo-ubicacion').textContent = t.equipo_ubicacion || '-';
        document.getElementById('ticket-details-descripcion').textContent = t.descripcion || 'Sin descripción';
        const creado = t.creado_en ? new Date(t.creado_en) : null;
        const terminado = t.terminado_en ? new Date(t.terminado_en) : null;
        document.getElementById('ticket-details-fecha-creacion').textContent = creado ? creado.toLocaleString() : '-';
        document.getElementById('ticket-details-fecha-termino').textContent = terminado ? terminado.toLocaleString() : '-';
        
        // Cargar historial y comentarios
        if (typeof loadTicketHistory === 'function') loadTicketHistory(id);
        if (typeof loadTicketComments === 'function') loadTicketComments(id);

        document.getElementById('ticket-details-modal').classList.remove('hidden');
    } catch (e) {
        console.error(e);
        alert('Error de conexión');
    }
}

async function loadTicketHistory(id) {
    const container = document.getElementById('ticket-history');
    if (!container) return;
    container.innerHTML = '<p class="text-xs text-slate-500">Cargando historial...</p>';
    try {
        const res = await fetch(`/tickets/${id}/historial`);
        if (!res.ok) {
            container.innerHTML = '<p class="text-xs text-red-400">No se pudo cargar el historial.</p>';
            return;
        }
        const historial = await res.json();
        if (!historial || historial.length === 0) {
            container.innerHTML = '<p class="text-xs text-slate-500">Sin cambios registrados.</p>';
            return;
        }
        container.innerHTML = '';
        historial.forEach(h => {
            const fecha = h.creado_en ? new Date(h.creado_en) : null;
