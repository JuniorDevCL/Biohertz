<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <title>BIOHERTS Tickets - Dashboard</title>
  <meta http-equiv="Content-Security-Policy" content="default-src 'self' data: blob:; script-src 'self' 'unsafe-inline' https://accounts.google.com https://apis.google.com https://*.gstatic.com https://cdn.socket.io https://cdn.tailwindcss.com; img-src 'self' data: https:; connect-src *; frame-src 'self' https://accounts.google.com https://*.gstatic.com; style-src 'self' 'unsafe-inline';">
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="/styles.css" rel="stylesheet">
  <script>
    // Inject server-side user/token data into client-side
    const CURRENT_USER = <%- JSON.stringify(user || {}) %>;
    const API_TOKEN = "<%= token %>";
    
    // Polyfill for localStorage if needed by renderer.js
    if (API_TOKEN) {
        localStorage.setItem('token', API_TOKEN);
    }
  </script>
</head>
<body class="bg-slate-950 text-white h-screen overflow-hidden flex">
  
  <!-- Main App Layout -->
  <div id="main-app" class="w-full h-full flex">
      
      <!-- Sidebar -->
      <aside class="w-64 h-full flex-shrink-0 flex flex-col justify-between border-r border-white/[0.05] bg-[#0f172a]/60 backdrop-blur-2xl shadow-2xl shadow-black/50">
          <div>
              <div class="p-6 border-b border-white/5 flex items-center gap-3">
                  <div class="h-8 w-8 rounded-lg bg-gradient-to-br from-blue-500 to-blue-600 flex items-center justify-center text-white shadow-lg shadow-blue-500/20">
                      <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="23 4 23 10 17 10"/><polyline points="1 20 1 14 7 14"/><path d="M3.51 9a10 10 0 0 1 14.88-3.36L23 4"/><path d="M1 20l4.62-1.54A10 10 0 0 0 20.49 15"/></svg>
                  </div>
                  <h1 class="text-xl font-bold text-white tracking-tight">BIOHERTZ</h1>
              </div>
              <nav class="px-4 py-6 space-y-2" id="main-nav">
                  <button id="navDashboard" class="btn btn-ghost w-full justify-start text-blue-400 bg-blue-500/10">Dashboard</button>
                  <button id="navTickets" class="btn btn-ghost w-full justify-start opacity-50 cursor-not-allowed">Tickets (Pronto)</button>
                  <button id="navEquipos" class="btn btn-ghost w-full justify-start opacity-50 cursor-not-allowed">Equipos (Pronto)</button>
                  <button id="navAgenda" class="btn btn-ghost w-full justify-start opacity-50 cursor-not-allowed">
                      <svg class="w-4 h-4 mr-2 text-slate-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect><line x1="16" y1="2" x2="16" y2="6"></line><line x1="8" y1="2" x2="8" y2="6"></line><line x1="3" y1="10" x2="21" y2="10"></line></svg>
                      Agenda (Pronto)
                  </button>
                  <button id="navClientes" class="btn btn-ghost w-full justify-start opacity-50 cursor-not-allowed">Clientes (Pronto)</button>
                  <button id="navSettings" class="btn btn-ghost w-full justify-start opacity-50 cursor-not-allowed">Ajustes (Pronto)</button>
                  <button id="navUsers" class="btn btn-ghost w-full justify-start opacity-50 cursor-not-allowed">Usuarios (Pronto)</button>
              </nav>
          </div>
          
          <div class="p-4 border-t border-white/5">
              <div class="flex items-center gap-3 mb-4">
                  <button id="themeToggle" class="btn btn-ghost btn-small w-full justify-center text-slate-400 hover:text-white" title="Cambiar tema">
                      <svg class="w-5 h-5 sun-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="5"></circle><line x1="12" y1="1" x2="12" y2="3"></line><line x1="12" y1="21" x2="12" y2="23"></line><line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line><line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line><line x1="1" y1="12" x2="3" y2="12"></line><line x1="21" y1="12" x2="23" y2="12"></line><line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line><line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line></svg>
                  </button>
              </div>
              <div class="flex items-center gap-3">
                  <div class="login-avatar w-10 h-10 rounded-full overflow-hidden flex-shrink-0" id="sidebar-avatar-slot">
                    <div class="w-full h-full bg-blue-500 flex items-center justify-center text-white font-bold" id="userAvatar">
                        <%= user.nombre ? user.nombre.charAt(0).toUpperCase() : 'U' %>
                    </div>
                  </div>
                  <div class="truncate text-sm text-white flex flex-col">
                    <span id="user-nombre" class="font-medium"><%= user.nombre || 'Usuario' %></span>
                    <span class="text-xs text-slate-400"><%= user.email %></span>
                  </div>
              </div>
          </div>
      </aside>

      <!-- Main Content -->
      <main class="flex-1 h-full overflow-y-auto relative bg-slate-950">
          <div class="max-w-7xl mx-auto px-6 py-8">
              
              <span class="hidden" id="status"></span>

              <section id="dashboard-section" class="">
                  <div class="card">
                      <div class="card-header"><h2>Dashboard</h2></div>
                      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-6">
                          <div class="card flex items-center p-5 bg-gradient-to-br from-blue-600/20 via-transparent to-transparent">
                              <div class="rounded-xl h-12 w-12 flex items-center justify-center text-blue-400 border border-white/10 mr-4">
                                  <svg class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="3" y="3" width="7" height="7"/><rect x="14" y="3" width="7" height="7"/><rect x="14" y="14" width="7" height="7"/><rect x="3" y="14" width="7" height="7"/></svg>
                              </div>
                              <div class="flex-1">
                                  <div class="text-xs font-medium uppercase tracking-wider text-slate-400">Total Tickets</div>
                                  <div class="text-4xl font-bold text-white mt-1" id="total-tickets-count"><%= stats.totalTickets %></div>
                              </div>
                          </div>
                          <div class="card flex items-center p-5 bg-gradient-to-br from-orange-500/20 via-transparent to-transparent">
                              <div class="rounded-xl h-12 w-12 flex items-center justify-center text-orange-400 border border-white/10 mr-4">
                                  <svg class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/><path d="M12 6v6l4 2"/></svg>
                              </div>
                              <div class="flex-1">
                                  <div class="text-xs font-medium uppercase tracking-wider text-slate-400">Pending</div>
                                  <div class="text-4xl font-bold text-white mt-1" id="assigned-count"><%= stats.pendingTickets %></div>
                              </div>
                          </div>
                          <div class="card flex items-center p-5 bg-gradient-to-br from-cyan-500/20 via-transparent to-transparent">
                              <div class="rounded-xl h-12 w-12 flex items-center justify-center text-cyan-400 border border-white/10 mr-4">
                                  <svg class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="7" r="4"/><path d="M5.5 21v-2a6.5 6.5 0 0 1 13 0v2"/></svg>
                              </div>
                              <div class="flex-1">
                                  <div class="text-xs font-medium uppercase tracking-wider text-slate-400">Clients</div>
                                  <div class="text-4xl font-bold text-white mt-1" id="total-clientes-count"><%= stats.clients %></div>
                              </div>
                          </div>
                      </div>
                  </div>
                  <div class="card mt-6 p-6">
                      <div class="card-header">
                          <h2 class="text-xl font-semibold text-white">Recent Tickets</h2>
                          <button id="btnGoCreateTicket" class="btn btn-primary text-sm px-4 py-2 rounded-lg opacity-50 cursor-not-allowed">Create Ticket (Pronto)</button>
                      </div>
                      <div id="assigned-list" class="tickets-grid">
                        <% if (tickets && tickets.length > 0) { %>
                            <div class="overflow-x-auto">
                                <table class="w-full text-left border-collapse">
                                    <thead>
                                        <tr class="text-slate-400 border-b border-slate-700">
                                            <th class="py-3 px-4">TÃ­tulo</th>
                                            <th class="py-3 px-4">Estado</th>
                                            <th class="py-3 px-4">Asignado</th>
                                            <th class="py-3 px-4">Fecha</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% tickets.forEach(ticket => { %>
                                            <tr class="border-b border-slate-800 hover:bg-slate-900/50">
                                                <td class="py-3 px-4"><%= ticket.titulo %></td>
                                                <td class="py-3 px-4">
                                                    <span class="px-2 py-1 rounded text-xs font-medium <%= ticket.estado === 'pendiente' ? 'bg-orange-500/20 text-orange-400' : 'bg-green-500/20 text-green-400' %>">
                                                        <%= ticket.estado %>
                                                    </span>
                                                </td>
                                                <td class="py-3 px-4"><%= ticket.asignado_nombre || 'Sin asignar' %></td>
                                                <td class="py-3 px-4 text-slate-400"><%= new Date(ticket.creado_en).toLocaleDateString() %></td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        <% } else { %>
                            <p class="text-slate-400 text-center py-8">No hay tickets recientes.</p>
                        <% } %>
                      </div>
                  </div>
              </section>

          </div>
      </main>
  </div>
  
  <script src="/socket.io/socket.io.js"></script>
</body>
</html>