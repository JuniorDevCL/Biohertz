<div class="max-w-7xl mx-auto px-6 py-8">
    <span class="hidden" id="status"></span>

    <section id="dashboard-section" class="">
        <div class="card">
            <div class="card-header"><h2>Dashboard</h2></div>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-6">
                <div class="card flex items-center p-5 bg-gradient-to-br from-blue-600/20 via-transparent to-transparent">
                    <div class="rounded-xl h-12 w-12 flex items-center justify-center text-blue-400 border border-white/10 mr-4">
                        <svg class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="3" y="3" width="7" height="7"/><rect x="14" y="3" width="7" height="7"/><rect x="14" y="14" width="7" height="7"/><rect x="3" y="14" width="7" height="7"/></svg>
                    </div>
                    <div class="flex-1">
                        <div class="text-xs font-medium uppercase tracking-wider text-slate-400">Total Tickets</div>
                        <div class="text-4xl font-bold text-white mt-1" id="total-tickets-count"><%= stats.totalTickets %></div>
                    </div>
                </div>
                <div class="card flex items-center p-5 bg-gradient-to-br from-orange-500/20 via-transparent to-transparent">
                    <div class="rounded-xl h-12 w-12 flex items-center justify-center text-orange-400 border border-white/10 mr-4">
                        <svg class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/><path d="M12 6v6l4 2"/></svg>
                    </div>
                    <div class="flex-1">
                        <div class="text-xs font-medium uppercase tracking-wider text-slate-400">Pending</div>
                        <div class="text-4xl font-bold text-white mt-1" id="assigned-count"><%= stats.pendingTickets %></div>
                    </div>
                </div>
                <div class="card flex items-center p-5 bg-gradient-to-br from-cyan-500/20 via-transparent to-transparent">
                    <div class="rounded-xl h-12 w-12 flex items-center justify-center text-cyan-400 border border-white/10 mr-4">
                        <svg class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="7" r="4"/><path d="M5.5 21v-2a6.5 6.5 0 0 1 13 0v2"/></svg>
                    </div>
                    <div class="flex-1">
                        <div class="text-xs font-medium uppercase tracking-wider text-slate-400">Clients</div>
                        <div class="text-4xl font-bold text-white mt-1" id="total-clientes-count"><%= stats.clients %></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card mt-6 p-6">
            <div class="card-header">
                <h2 class="text-xl font-semibold text-white">Recent Tickets</h2>
                <a href="/tickets" class="btn btn-primary text-sm px-4 py-2 rounded-lg no-underline inline-block">Ver Todos</a>
            </div>
            <div id="assigned-list" class="tickets-grid">
              <% if (typeof tickets !== 'undefined' && tickets && tickets.length > 0) { %>
                  <div class="overflow-x-auto">
                      <table class="w-full text-left border-collapse">
                          <thead>
                              <tr class="text-slate-400 border-b border-slate-700">
                                  <th class="py-3 px-4">Título</th>
                                  <th class="py-3 px-4">Estado</th>
                                  <th class="py-3 px-4">Asignado</th>
                                  <th class="py-3 px-4">Fecha</th>
                                  <th class="py-3 px-4 text-center">Acción</th>
                              </tr>
                          </thead>
                          <tbody>
                              <% tickets.forEach(ticket => { %>
                                  <tr class="border-b border-slate-800 hover:bg-slate-900/50">
                                <td class="py-3 px-4">
                                    <button type="button" class="text-white hover:underline text-left" onclick="openTicketDetails('<%= ticket.id %>')">
                                        <%= ticket.titulo %>
                                    </button>
                                </td>
                                      <td class="py-3 px-4">
                                          <span class="px-2 py-1 rounded text-xs font-medium <%= ticket.estado === 'pendiente' ? 'bg-orange-500/20 text-orange-400' : (ticket.estado === 'terminado' ? 'bg-blue-500/20 text-blue-400' : 'bg-green-500/20 text-green-400') %>">
                                              <%= ticket.estado %>
                                          </span>
                                      </td>
                                      <td class="py-3 px-4"><%= ticket.asignado_nombre || 'Sin asignar' %></td>
                                      <td class="py-3 px-4 text-slate-400"><%= new Date(ticket.creado_en).toLocaleDateString() %></td>
                                      <td class="py-3 px-4 text-center">
                                          <% if (ticket.estado === 'terminado' || ticket.estado === 'hecho') { %>
                                              <button disabled class="inline-flex items-center px-3 py-1.5 text-xs rounded-full bg-emerald-600/20 text-emerald-400 border border-emerald-500/40 cursor-default">
                                                  <i class="ph ph-check-circle mr-1.5"></i>
                                                  Terminado
                                              </button>
                                          <% } else { %>
                                              <button onclick="finishTicket('<%= ticket.id %>')" class="inline-flex items-center px-3 py-1.5 text-xs rounded-full bg-emerald-600 hover:bg-emerald-500 text-white border border-emerald-400/60 shadow-sm shadow-emerald-500/30 transition-colors">
                                                  <i class="ph ph-check mr-1.5"></i>
                                                  Marcar como terminado
                                              </button>
                                          <% } %>
                                      </td>
                              </tr>
                          <% }); %>
                      </tbody>
                  </table>
              </div>
          <% } else { %>
              <p class="text-slate-400 text-center py-8">No tienes tickets asignados recientemente.</p>
          <% } %>
        </div>
    </div>
</section>
</div>

<script>
async function finishTicket(id) {
    try {
        const res = await fetch(`/tickets/${id}/estado`, {
            method: 'PATCH',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ estado: 'hecho' })
        });
        if (res.ok) {
            window.location.reload();
        } else {
            let msg = 'Error al marcar como terminado';
            try {
                const data = await res.json();
                if (data && data.error) msg = data.error;
            } catch {}
            alert(msg);
        }
    } catch (e) {
        console.error(e);
        alert('Error de conexión');
    }
}

async function openTicketDetails(id) {
    try {
        const res = await fetch(`/tickets/${id}`);
        if (!res.ok) {
            alert('Error al cargar el ticket');
            return;
        }
        const t = await res.json();
        document.getElementById('ticket-details-title').textContent = t.titulo || '';
        document.getElementById('ticket-details-estado').textContent = t.estado || '';
        document.getElementById('ticket-details-creado').textContent = t.creado_por_nombre || 'Desconocido';
        document.getElementById('ticket-details-asignado').textContent = t.asignado_a_nombre || 'Sin asignar';
        document.getElementById('ticket-details-cliente').textContent = t.cliente_nombre || '-';
        document.getElementById('ticket-details-equipo').textContent = t.equipo_nombre || '-';
        document.getElementById('ticket-details-descripcion').textContent = t.descripcion || 'Sin descripción';
        const creado = t.creado_en ? new Date(t.creado_en) : null;
        const terminado = t.terminado_en ? new Date(t.terminado_en) : null;
        document.getElementById('ticket-details-fecha-creacion').textContent = creado ? creado.toLocaleString() : '-';
        document.getElementById('ticket-details-fecha-termino').textContent = terminado ? terminado.toLocaleString() : '-';
        document.getElementById('ticket-details-modal').classList.remove('hidden');
    } catch (e) {
        console.error(e);
        alert('Error de conexión');
    }
}
</script>

<div id="ticket-details-modal" class="fixed inset-0 bg-black/60 hidden z-50 flex items-center justify-center">
    <div class="bg-slate-900 border border-slate-700 rounded-xl w-full max-w-lg p-6 shadow-2xl">
        <div class="flex justify-between items-start mb-4">
            <div>
                <h3 id="ticket-details-title" class="text-xl font-bold text-white"></h3>
                <p class="text-xs text-slate-400 mt-1">
                    Estado: <span id="ticket-details-estado" class="font-medium"></span>
                </p>
            </div>
            <button type="button" class="text-slate-400 hover:text-white" onclick="document.getElementById('ticket-details-modal').classList.add('hidden')">
                <i class="ph ph-x text-lg"></i>
            </button>
        </div>
        <div class="space-y-2 text-sm text-slate-200">
            <p><span class="font-semibold text-slate-400">Creado por:</span> <span id="ticket-details-creado"></span></p>
            <p><span class="font-semibold text-slate-400">Asignado a:</span> <span id="ticket-details-asignado"></span></p>
            <p><span class="font-semibold text-slate-400">Cliente:</span> <span id="ticket-details-cliente"></span></p>
            <p><span class="font-semibold text-slate-400">Equipo:</span> <span id="ticket-details-equipo"></span></p>
            <p><span class="font-semibold text-slate-400">Fecha creación:</span> <span id="ticket-details-fecha-creacion"></span></p>
            <p><span class="font-semibold text-slate-400">Fecha término:</span> <span id="ticket-details-fecha-termino"></span></p>
            <div class="pt-2">
                <p class="font-semibold text-slate-400 mb-1">Descripción</p>
                <p id="ticket-details-descripcion" class="text-slate-200 whitespace-pre-wrap text-sm"></p>
            </div>
        </div>
        <div class="mt-6 flex justify-end">
            <button type="button" class="px-4 py-2 rounded-lg bg-slate-800 hover:bg-slate-700 text-slate-100 text-sm" onclick="document.getElementById('ticket-details-modal').classList.add('hidden')">
                Cerrar
            </button>
        </div>
    </div>
</div>
