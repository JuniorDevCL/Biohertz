<div class="max-w-7xl mx-auto px-6 py-8">
    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4 mb-8">
        <div>
            <h1 class="text-3xl font-bold text-white tracking-tight">Calendario</h1>
            <p class="text-slate-400 text-sm mt-1">Eventos importantes de la empresa visibles para todos.</p>
        </div>
        <div class="flex flex-col sm:flex-row gap-3 w-full md:w-auto items-stretch md:items-center">
            <div class="flex items-center gap-2">
                <a href="/calendario?month=<%= prevMonth %>&year=<%= prevYear %>" class="inline-flex items-center justify-center px-3 py-2 rounded-lg bg-slate-800 hover:bg-slate-700 text-slate-200 text-sm">
                    <i class="ph ph-caret-left mr-1"></i>
                    Mes anterior
                </a>
                <a href="/calendario?month=<%= nextMonth %>&year=<%= nextYear %>" class="inline-flex items-center justify-center px-3 py-2 rounded-lg bg-slate-800 hover:bg-slate-700 text-slate-200 text-sm">
                    Mes siguiente
                    <i class="ph ph-caret-right ml-1"></i>
                </a>
            </div>
            <div class="flex items-center gap-2">
                <div class="px-4 py-2 rounded-lg bg-slate-800 text-slate-100 text-sm font-medium">
                    <%= monthName %> <%= year %>
                </div>
                <a href="/calendario" class="inline-flex items-center justify-center px-3 py-2 rounded-lg bg-blue-600 hover:bg-blue-700 text-white text-sm">
                    <i class="ph ph-calendar-blank mr-1.5"></i>
                    Hoy
                </a>
            </div>
            <button onclick="document.getElementById('new-event-modal').classList.remove('hidden')" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-xl transition-colors flex items-center justify-center text-sm font-medium shadow-sm shadow-blue-500/30">
                <i class="ph ph-plus mr-2 text-base"></i> Nuevo Evento
            </button>
        </div>
    </div>

    <div class="bg-slate-900 border border-slate-800 rounded-2xl shadow-xl p-6">
        <div class="md:flex md:items-start md:gap-6">
            <div class="md:flex-1">
                <div class="grid grid-cols-7 gap-2 mb-2">
                    <% weekDaysShort.forEach(function(dia) { %>
                        <div class="text-center text-xs font-semibold text-slate-400 uppercase tracking-wide">
                            <%= dia %>
                        </div>
                    <% }); %>
                </div>
                <div class="grid grid-cols-7 gap-2">
                    <% weeks.forEach(function(week) { %>
                        <% week.forEach(function(day) { %>
                            <% if (!day) { %>
                                <div class="h-24 rounded-lg bg-slate-900/40 border border-slate-800"></div>
                            <% } else { %>
                                <div class="h-24 rounded-lg bg-slate-900/80 border border-slate-800 flex flex-col p-2 overflow-hidden cursor-pointer hover:bg-slate-800/50 transition-colors"
                                     onclick="openDayDetails(this)"
                                     data-date="<%= day.dateKey %>">
                                    <div class="flex items-center justify-between mb-1">
                                        <span class="text-xs font-semibold <%= day.isToday ? 'text-emerald-400' : 'text-slate-300' %>">
                                            <%= day.day %>
                                        </span>
                                        <% if (day.isToday) { %>
                                            <span class="inline-flex items-center px-2 py-0.5 rounded-full bg-emerald-500/20 text-emerald-300 text-[10px] font-medium">
                                                Hoy
                                            </span>
                                        <% } %>
                                    </div>
                                    <div class="space-y-1 overflow-y-auto pr-1 custom-scroll">
                                        <% if (day.events && day.events.length > 0) { %>
                                            <% day.events.forEach(function(ev) { %>
                                                <div class="text-[11px] px-2 py-1 rounded bg-blue-600/20 text-blue-200 truncate flex flex-col gap-0.5">
                                                    <div class="flex justify-between items-center gap-1">
                                                        <span class="truncate"><%= ev.titulo %></span>
                                                        <% if (ev.hora_inicio) { %>
                                                            <span class="text-[9px] opacity-70"><%= ev.hora_inicio.slice(0, 5) %></span>
                                                        <% } %>
                                                    </div>
                                                    <% if (ev.tipo) { %>
                                                        <span class="text-[9px] px-1.5 py-0.5 rounded-full bg-slate-900/60 border border-slate-700/60 uppercase tracking-wide">
                                                            <%= ev.tipo %>
                                                        </span>
                                                    <% } %>
                                                </div>
                                            <% }); %>
                                        <% } else { %>
                                            <div class="text-[11px] text-slate-500 italic">Sin eventos</div>
                                        <% } %>
                                    </div>
                                </div>
                            <% } %>
                        <% }); %>
                    <% }); %>
                </div>
            </div>
            <div id="day-summary-panel" class="mt-6 md:mt-0 md:w-72 lg:w-80 bg-slate-900/80 border border-slate-800 rounded-lg p-4 hidden">
                <div class="flex items-center justify-between mb-2">
                    <div>
                        <p class="text-xs uppercase tracking-wide text-slate-500">Eventos del día</p>
                        <h3 id="day-summary-title" class="text-sm font-semibold text-white mt-1"></h3>
                    </div>
                </div>
                <div id="day-summary-list" class="mt-3 space-y-2 max-h-64 overflow-y-auto custom-scroll"></div>
            </div>
        </div>
    </div>
</div>

<div id="day-details-modal" class="fixed inset-0 bg-black/50 hidden flex items-center justify-center z-50"
     onclick="if (event.target === this) this.classList.add('hidden')">
    <div class="bg-slate-800 p-6 rounded-xl w-full max-w-md shadow-2xl border border-slate-700 max-h-[80vh] flex flex-col">
        <div class="flex justify-between items-center mb-4">
            <h3 id="day-details-title" class="text-xl font-bold text-white">Eventos</h3>
            <button onclick="document.getElementById('day-details-modal').classList.add('hidden')" class="text-slate-400 hover:text-white">
                <i class="ph ph-x text-lg"></i>
            </button>
        </div>
        <div id="day-details-content" class="flex-1 overflow-y-auto space-y-3 custom-scroll pr-2"></div>
        <div class="mt-4 flex justify-end">
            <button type="button" class="px-4 py-2 rounded-lg bg-slate-700 hover:bg-slate-600 text-slate-100 text-sm"
                    onclick="document.getElementById('day-details-modal').classList.add('hidden')">
                Cerrar
            </button>
        </div>
    </div>
</div>

<script>
const calendarEventsByDate = {};
const calendarEventsById = {};
const calendarCanEditEvents = true;

<% weeks.forEach(function(week) { %>
    <% week.forEach(function(day) { if (day) { %>
        calendarEventsByDate["<%= day.dateKey %>"] = <%- JSON.stringify(day.events || []) %>;
    <% } }); %>
<% }); %>

Object.keys(calendarEventsByDate).forEach(function (key) {
    const list = calendarEventsByDate[key];
    if (Array.isArray(list)) {
        list.forEach(function (ev) {
            if (ev && typeof ev.id !== 'undefined') {
                calendarEventsById[String(ev.id)] = ev;
            }
        });
    }
});

function openDayDetails(el) {
    const date = el.getAttribute('data-date');
    const rawEvents = calendarEventsByDate[date];
    let events = Array.isArray(rawEvents) ? rawEvents : [];

    const dateObj = new Date(date + 'T00:00:00');
    const options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
    const dateFormattedRaw = dateObj.toLocaleDateString('es-ES', options);
    const dateFormatted = dateFormattedRaw.charAt(0).toUpperCase() + dateFormattedRaw.slice(1);
    document.getElementById('day-details-title').textContent = dateFormatted;

    const container = document.getElementById('day-details-content');
    container.innerHTML = '';

    if (events.length === 0) {
        container.innerHTML = '<p class="text-slate-400 text-center py-4">No hay eventos para este día.</p>';
    } else {
        events.forEach(ev => {
            const div = document.createElement('div');
            div.className = 'bg-slate-900/50 p-3 rounded-lg border border-slate-700/50';

            let timeStr = '';
            if (ev.hora_inicio) {
                timeStr += String(ev.hora_inicio).slice(0, 5);
                if (ev.hora_fin) {
                    timeStr += ' - ' + String(ev.hora_fin).slice(0, 5);
                }
            }

            const timeBadgeHtml = timeStr
                ? '<span class="text-xs text-slate-400 bg-slate-800 px-1.5 py-0.5 rounded whitespace-nowrap">' +
                  timeStr +
                  '</span>'
                : '';

            const descHtml = ev.descripcion
                ? '<p class="text-slate-400 text-xs mt-1 whitespace-pre-wrap">' +
                  ev.descripcion +
                  '</p>'
                : '';

            const creator = ev.creado_por || '?';

            const tipoHtml = ev.tipo
                ? '<span class="ml-2 text-[10px] px-1.5 py-0.5 rounded-full bg-slate-800 text-slate-200 uppercase tracking-wide">' +
                  ev.tipo +
                  '</span>'
                : '';

            let linksHtml = '';
            if (ev.ticket_id) {
                linksHtml += '<span class="inline-flex items-center px-1.5 py-0.5 rounded bg-blue-500/15 text-blue-300 text-[10px] mr-1">Ticket #' +
                             ev.ticket_id +
                             '</span>';
            }
            if (ev.equipo_id) {
                linksHtml += '<span class="inline-flex items-center px-1.5 py-0.5 rounded bg-emerald-500/15 text-emerald-300 text-[10px] mr-1">Equipo #' +
                             ev.equipo_id +
                             '</span>';
            }
            if (ev.cliente_id) {
                linksHtml += '<span class="inline-flex items-center px-1.5 py-0.5 rounded bg-amber-500/15 text-amber-300 text-[10px] mr-1">Cliente #' +
                             ev.cliente_id +
                             '</span>';
            }

            if (linksHtml) {
                linksHtml =
                    '<div class="mt-1 flex flex-wrap items-center gap-1">' +
                        linksHtml +
                    '</div>';
            }

            let actionsHtml = '';
            if (calendarCanEditEvents && ev && typeof ev.id !== 'undefined') {
                actionsHtml =
                    '<div class="mt-2 flex gap-2 justify-end">' +
                        '<button type="button" class="px-2 py-1 rounded bg-slate-700 hover:bg-slate-600 text-xs text-slate-100" onclick="openEditEvent(' + ev.id + ')">Editar</button>' +
                        '<button type="button" class="px-2 py-1 rounded bg-red-700 hover:bg-red-600 text-xs text-white" onclick="deleteEvent(' + ev.id + ')">Eliminar</button>' +
                    '</div>';
            }

            div.innerHTML =
                '<div class="flex justify-between items-start gap-2">' +
                    '<div>' +
                        '<h4 class="font-medium text-blue-300 text-sm">' +
                            (ev.titulo || '') +
                            tipoHtml +
                        '</h4>' +
                        descHtml +
                        linksHtml +
                    '</div>' +
                    '<div class="flex flex-col items-end gap-1">' +
                        timeBadgeHtml +
                    '</div>' +
                '</div>' +
                '<div class="text-[10px] text-slate-500 mt-2 text-right">' +
                    'Creado por: usuario #' + creator +
                '</div>' +
                actionsHtml;

            container.appendChild(div);
        });
    }

    const summaryPanel = document.getElementById('day-summary-panel');
    const summaryTitle = document.getElementById('day-summary-title');
    const summaryList = document.getElementById('day-summary-list');

    if (summaryPanel && summaryTitle && summaryList) {
        if (!events || events.length === 0) {
            summaryPanel.classList.add('hidden');
            summaryList.innerHTML = '';
        } else {
            summaryPanel.classList.remove('hidden');
            summaryTitle.textContent = dateFormatted;
            summaryList.innerHTML = '';

            events.forEach(ev => {
                const item = document.createElement('div');
                item.className = 'bg-slate-900/60 border border-slate-700/70 rounded-lg p-3 cursor-pointer hover:bg-slate-800/80 transition-colors';

                let timeStr = '';
                if (ev.hora_inicio) {
                    timeStr += String(ev.hora_inicio).slice(0, 5);
                    if (ev.hora_fin) {
                        timeStr += ' - ' + String(ev.hora_fin).slice(0, 5);
                    }
                }

                const timeBadgeHtml = timeStr
                    ? '<span class="text-xs text-slate-400 bg-slate-800 px-1.5 py-0.5 rounded whitespace-nowrap ml-2">' +
                      timeStr +
                      '</span>'
                    : '';

                const descHtml = ev.descripcion
                    ? '<div class="text-xs text-slate-400 mt-1 whitespace-pre-wrap">' +
                      ev.descripcion +
                      '</div>'
                    : '';

                const tipoHtml = ev.tipo
                    ? '<span class="ml-2 text-[10px] px-1.5 py-0.5 rounded-full bg-slate-800 text-slate-200 uppercase tracking-wide">' +
                      ev.tipo +
                      '</span>'
                    : '';

                item.innerHTML =
                    '<div class="flex justify-between items-start gap-2">' +
                        '<div>' +
                            '<div class="text-sm font-medium text-blue-300">' +
                                (ev.titulo || '') +
                                tipoHtml +
                            '</div>' +
                            descHtml +
                        '</div>' +
                        timeBadgeHtml +
                    '</div>';

                summaryList.appendChild(item);
            });
        }
    }

    document.getElementById('day-details-modal').classList.remove('hidden');
}

function openEditEvent(id) {
    if (!calendarCanEditEvents) return;
    const ev = calendarEventsById[String(id)];
    if (!ev) return;

    const fechaValue = (ev.fecha || ev.fecha_inicio || '').slice(0, 10);

    document.getElementById('edit-event-id').value = id;
    document.getElementById('edit-event-titulo').value = ev.titulo || '';
    document.getElementById('edit-event-fecha').value = fechaValue || '';
    document.getElementById('edit-event-hora-inicio').value = ev.hora_inicio ? String(ev.hora_inicio).slice(0, 5) : '';
    document.getElementById('edit-event-hora-fin').value = ev.hora_fin ? String(ev.hora_fin).slice(0, 5) : '';
    document.getElementById('edit-event-descripcion').value = ev.descripcion || '';
    document.getElementById('edit-event-tipo').value = ev.tipo || '';
    document.getElementById('edit-event-ticket-id').value = ev.ticket_id || '';
    document.getElementById('edit-event-equipo-id').value = ev.equipo_id || '';
    document.getElementById('edit-event-cliente-id').value = ev.cliente_id || '';

    document.getElementById('edit-event-modal').classList.remove('hidden');
}

async function submitEditEvent(e) {
    e.preventDefault();
    if (!calendarCanEditEvents) return;

    const id = document.getElementById('edit-event-id').value;
    if (!id) {
        alert('Error interno: ID del evento no encontrado.');
        return;
    }

    const formData = new FormData(e.target);
    const data = Object.fromEntries(formData.entries());

    try {
        const res = await fetch('/calendario/eventos/' + id, {
            method: 'PATCH',
            headers: { 
                'Content-Type': 'application/json',
                'Accept': 'application/json'
            },
            body: JSON.stringify(data)
        });
        if (res.ok) {
            window.location.reload();
        } else {
            let msg = 'Error ' + res.status;
            try {
                const err = await res.json();
                if (err && err.error) msg += ': ' + err.error;
            } catch (_) {
                msg += ': Error inesperado del servidor (posiblemente HTML)';
            }
            alert(msg);
        }
    } catch (err) {
        console.error(err);
        alert('Error de conexión: ' + err.message);
    }
}

async function deleteEvent(id) {
    if (!calendarCanEditEvents) return;
    const confirmed = confirm('¿Seguro que deseas eliminar este evento? Esta acción no se puede deshacer.');
    if (!confirmed) return;

    try {
        const res = await fetch('/calendario/eventos/' + id, {
            method: 'DELETE',
            headers: {
                'Accept': 'application/json'
            }
        });
        if (res.ok) {
            window.location.reload();
        } else {
            let msg = 'Error ' + res.status;
            try {
                const err = await res.json();
                if (err && err.error) msg += ': ' + err.error;
            } catch (_) {
                msg += ': Error inesperado del servidor (posiblemente HTML)';
            }
            alert(msg);
        }
    } catch (err) {
        console.error(err);
        alert('Error de conexión: ' + err.message);
    }
}
</script>

<div id="new-event-modal" class="fixed inset-0 bg-black/50 hidden flex items-center justify-center z-50">
