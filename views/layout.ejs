        </nav> 
    </div> 
        <div class="p-4 border-t border-white/5 bg-[#0b1120]"> 
        <div class="flex items-center gap-3"> 
            <div class="h-9 w-9 rounded-full bg-gradient-to-br from-blue-500 to-indigo-600 flex items-center justify-center text-white text-xs font-bold shadow-md"> 
                US 
            </div> 
            <div class="overflow-hidden"> 
                <p class="text-sm font-medium text-white truncate">Usuario</p> 
                <p class="text-xs text-slate-500 truncate">En línea</p> 
            </div> 
        </div> 
    </div> 
</aside> 
    <main class="flex-1 h-full overflow-y-auto relative bg-slate-950"> 
        <div class="absolute inset-0 pointer-events-none bg-[radial-gradient(ellipse_at_top_right,_var(--tw-gradient-stops))] from-indigo-900/20 via-slate-950/0 to-slate-950/0 z-0"></div> 
    
        <div class="relative z-10 max-w-7xl mx-auto px-6 py-8 min-h-screen"> 
        <%- body %> 
    </div> 
</main> 
