<div class="max-w-7xl mx-auto px-6 py-8">
    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4 mb-8">
        <div>
            <h1 class="text-3xl font-bold text-white tracking-tight">Equipos</h1>
            <p class="text-slate-400 text-sm mt-1">Visualiza todos los equipos y su estado actual.</p>
        </div>
        <div class="flex flex-col sm:flex-row gap-3 w-full md:w-auto">
            <form action="/equipos" method="GET" class="flex-1 flex items-center gap-2">
                <div class="relative w-full">
                    <span class="absolute inset-y-0 left-0 pl-3 flex items-center text-slate-500">
                        <i class="ph ph-magnifying-glass text-sm"></i>
                    </span>
                    <input 
                        type="text" 
                        name="q" 
                        value="<%= typeof query !== 'undefined' ? query : '' %>" 
                        placeholder="Buscar por nombre, marca, modelo o serie" 
                        class="w-full bg-slate-900 border border-slate-700 rounded-lg pl-9 pr-3 py-2 text-sm text-white placeholder-slate-500 focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500"
                    >
                </div>
                <button type="submit" class="hidden sm:inline-flex items-center px-3 py-2 bg-slate-800 hover:bg-slate-700 text-slate-100 rounded-lg text-sm transition-colors">
                    Buscar
                </button>
            </form>
            <button onclick="document.getElementById('new-equipo-modal').classList.remove('hidden')" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-xl transition-colors flex items-center justify-center text-sm font-medium shadow-sm shadow-blue-500/30">
                <i class="ph ph-plus mr-2 text-base"></i> Nuevo Equipo
            </button>
        </div>
    </div>

    <div class="bg-slate-900 border border-slate-800 rounded-2xl shadow-xl p-6">
        <% if (typeof equipos !== 'undefined' && equipos && equipos.length > 0) { %>
            <div class="overflow-x-auto">
                <table class="w-full text-left border-collapse">
                    <thead>
                        <tr class="bg-slate-800/30 text-xs uppercase text-slate-400 font-semibold tracking-wider">
                            <th class="py-3 px-4">Nombre</th>
                            <th class="py-3 px-4">Marca/Modelo</th>
                            <th class="py-3 px-4">Serie</th>
                            <th class="py-3 px-4">Ubicación</th>
                            <th class="py-3 px-4">Estado</th>
                            <th class="py-3 px-4">Cliente</th>
                            <th class="py-3 px-4 text-right">Acciones</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-slate-800">
                        <% equipos.forEach(equipo => { %>
                            <tr class="hover:bg-slate-800/40 transition-colors group">
                                <td class="py-3 px-4 font-medium text-white"><%= equipo.nombre %></td>
                                <td class="py-3 px-4 text-slate-300"><%= equipo.marca %> <%= equipo.modelo ? '- ' + equipo.modelo : '' %></td>
                                <td class="py-3 px-4 text-slate-400"><%= equipo.numero_serie %></td>
                                <td class="py-3 px-4 text-slate-400"><%= equipo.ubicacion || '-' %></td>
                                <td class="py-3 px-4">
                                    <% 
                                        const estado = equipo.estado || 'desconocido';
                                        const estadoClass = estado === 'operativo' 
                                            ? 'bg-emerald-600/20 text-emerald-400 border border-emerald-500/40' 
                                            : (estado === 'en_reparacion' 
                                                ? 'bg-amber-500/20 text-amber-300 border border-amber-400/50' 
                                                : 'bg-red-600/20 text-red-300 border border-red-500/50');
                                    %>
                                    <span class="px-2 py-1 rounded-full text-xs font-medium <%= estadoClass %>">
                                        <%= estado %>
                                    </span>
                                </td>
                                <td class="py-3 px-4 text-slate-300">
                                    <% if (equipo.cliente) { %>
                                        <span class="inline-flex items-center px-2 py-1 rounded-full bg-slate-800 text-xs text-slate-200">
                                            <i class="ph ph-user mr-1.5 text-slate-400"></i>
                                            <%= equipo.cliente %>
                                        </span>
                                    <% } else { %>
                                        <span class="text-slate-500 text-sm">Sin asignar</span>
                                    <% } %>
                                </td>
                                <td class="py-3 px-4">
                                    <div class="flex items-center justify-end gap-2">
                                        <button type="button" onclick="openEditEquipo('<%= equipo.id %>')" class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-yellow-600/40 hover:bg-yellow-500/60 text-yellow-200 transition-colors" title="Editar equipo">
                                            <i class="ph ph-pencil-simple text-sm"></i>
                                        </button>
                                        <% if (typeof user !== 'undefined' && user && user.rol === 'admin') { %>
                                            <button type="button" onclick="deleteEquipo('<%= equipo.id %>')" class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-red-900/40 hover:bg-red-700/70 text-red-200 transition-colors" title="Eliminar equipo">
                                                <i class="ph ph-trash text-sm"></i>
                                            </button>
                                        <% } %>
                                        <a href="/equipos/<%= equipo.id %>" class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-slate-800 hover:bg-slate-700 text-slate-200 transition-colors" title="Ver detalle">
                                            <i class="ph ph-eye text-sm"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <div class="text-center py-12">
                <div class="text-slate-500 mb-4 text-5xl"><i class="ph ph-desktop"></i></div>
                <p class="text-slate-400 text-lg">No hay equipos registrados.</p>
                <p class="text-slate-500 text-sm">Registra un nuevo equipo para comenzar.</p>
            </div>
        <% } %>
    </div>
</div>

<!-- Modal Nuevo Equipo -->
<div id="new-equipo-modal" class="fixed inset-0 bg-black/50 hidden flex items-center justify-center z-50">
    <div class="bg-slate-800 p-6 rounded-xl w-full max-w-lg shadow-2xl border border-slate-700 overflow-y-auto max-h-[90vh]">
        <h3 class="text-xl font-bold text-white mb-4">Nuevo Equipo</h3>
        <form action="/equipos" method="POST">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                <div>
                    <label class="block text-slate-400 text-sm mb-2">Nombre</label>
                    <input type="text" name="nombre" required class="w-full bg-slate-900 border border-slate-700 rounded p-2 text-white focus:outline-none focus:border-blue-500">
                </div>
                <div>
                    <label class="block text-slate-400 text-sm mb-2">Marca</label>
                    <input type="text" name="marca" class="w-full bg-slate-900 border border-slate-700 rounded p-2 text-white focus:outline-none focus:border-blue-500">
                </div>
                <div>
                    <label class="block text-slate-400 text-sm mb-2">Modelo</label>
                    <input type="text" name="modelo" class="w-full bg-slate-900 border border-slate-700 rounded p-2 text-white focus:outline-none focus:border-blue-500">
                </div>
                <div>
                    <label class="block text-slate-400 text-sm mb-2">N° Serie</label>
                    <input type="text" name="numero_serie" class="w-full bg-slate-900 border border-slate-700 rounded p-2 text-white focus:outline-none focus:border-blue-500">
                </div>
                <div>
                    <label class="block text-slate-400 text-sm mb-2">Ubicación</label>
                    <input type="text" name="ubicacion" class="w-full bg-slate-900 border border-slate-700 rounded p-2 text-white focus:outline-none focus:border-blue-500">
                </div>
                <div>
                    <label class="block text-slate-400 text-sm mb-2">Cliente (Opcional)</label>
                    <select name="cliente_id" class="w-full bg-slate-900 border border-slate-700 rounded p-2 text-white focus:outline-none focus:border-blue-500">
                        <option value="">Seleccionar Cliente</option>
                        <% if (typeof clientes !== 'undefined') { %>
                            <% clientes.forEach(c => { %>
                                <option value="<%= c.id %>"><%= c.nombre %></option>
                            <% }); %>
                        <% } %>
                    </select>
                </div>
                <div>
                    <label class="block text-slate-400 text-sm mb-2">Estado</label>
                    <select name="estado" class="w-full bg-slate-900 border border-slate-700 rounded p-2 text-white focus:outline-none focus:border-blue-500">
                        <option value="operativo">Operativo</option>
                        <option value="en_reparacion">En Reparación</option>
                        <option value="baja">De Baja</option>
                    </select>
                </div>
            </div>
            <div class="flex justify-end gap-3 mt-6">
                <button type="button" onclick="document.getElementById('new-equipo-modal').classList.add('hidden')" class="px-4 py-2 text-slate-300 hover:text-white">Cancelar</button>
                <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded">Guardar</button>
            </div>
        </form>
    </div>
</div>

<div id="edit-equipo-modal" class="fixed inset-0 bg-black/50 hidden flex items-center justify-center z-50">
    <div class="bg-slate-800 p-6 rounded-xl w-full max-w-lg shadow-2xl border border-slate-700 overflow-y-auto max-h-[90vh]">
        <h3 class="text-xl font-bold text-white mb-4">Editar Equipo</h3>
        <form onsubmit="submitEditEquipo(event)">
            <input type="hidden" id="edit-equipo-id" name="id">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                <div>
                    <label class="block text-slate-400 text-sm mb-2">Nombre</label>
                    <input type="text" id="edit-equipo-nombre" name="nombre" required class="w-full bg-slate-900 border border-slate-700 rounded p-2 text-white focus:outline-none focus:border-blue-500">
                </div>
                <div>
                    <label class="block text-slate-400 text-sm mb-2">Marca</label>
                    <input type="text" id="edit-equipo-marca" name="marca" class="w-full bg-slate-900 border border-slate-700 rounded p-2 text-white focus:outline-none focus:border-blue-500">
                </div>
                <div>
                    <label class="block text-slate-400 text-sm mb-2">Modelo</label>
                    <input type="text" id="edit-equipo-modelo" name="modelo" class="w-full bg-slate-900 border border-slate-700 rounded p-2 text-white focus:outline-none focus:border-blue-500">
                </div>
                <div>
                    <label class="block text-slate-400 text-sm mb-2">N° Serie</label>
                    <input type="text" id="edit-equipo-numero_serie" name="numero_serie" class="w-full bg-slate-900 border border-slate-700 rounded p-2 text-white focus:outline-none focus:border-blue-500">
                </div>
                <div>
                    <label class="block text-slate-400 text-sm mb-2">Ubicación</label>
                    <input type="text" id="edit-equipo-ubicacion" name="ubicacion" class="w-full bg-slate-900 border border-slate-700 rounded p-2 text-white focus:outline-none focus:border-blue-500">
                </div>
                <div>
                    <label class="block text-slate-400 text-sm mb-2">Cliente (Opcional)</label>
                    <select id="edit-equipo-cliente" name="cliente_id" class="w-full bg-slate-900 border border-slate-700 rounded p-2 text-white focus:outline-none focus:border-blue-500">
                        <option value="">Seleccionar Cliente</option>
                        <% if (typeof clientes !== 'undefined') { %>
                            <% clientes.forEach(c => { %>
                                <option value="<%= c.id %>"><%= c.nombre %></option>
                            <% }); %>
                        <% } %>
                    </select>
                </div>
                <div>
                    <label class="block text-slate-400 text-sm mb-2">Estado</label>
                    <select id="edit-equipo-estado" name="estado" class="w-full bg-slate-900 border border-slate-700 rounded p-2 text-white focus:outline-none focus:border-blue-500">
                        <option value="operativo">Operativo</option>
                        <option value="en_reparacion">En Reparación</option>
                        <option value="baja">De Baja</option>
                    </select>
                </div>
            </div>
            <div class="flex justify-end gap-3 mt-6">
                <button type="button" onclick="document.getElementById('edit-equipo-modal').classList.add('hidden')" class="px-4 py-2 text-slate-300 hover:text-white">Cancelar</button>
                <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded">Guardar cambios</button>
            </div>
        </form>
    </div>
</div>

<script>
async function openEditEquipo(id) {
    try {
        const res = await fetch(`/equipos/${id}`);
        if (!res.ok) {
            alert('Error al cargar el equipo');
            return;
        }
        const e = await res.json();
        document.getElementById('edit-equipo-id').value = e.id || '';
        document.getElementById('edit-equipo-nombre').value = e.nombre || '';
        document.getElementById('edit-equipo-marca').value = e.marca || '';
        document.getElementById('edit-equipo-modelo').value = e.modelo || '';
        document.getElementById('edit-equipo-numero_serie').value = e.numero_serie || '';
        document.getElementById('edit-equipo-ubicacion').value = e.ubicacion || '';
        document.getElementById('edit-equipo-estado').value = e.estado || 'operativo';
        const clienteSelect = document.getElementById('edit-equipo-cliente');
        if (clienteSelect) {
            clienteSelect.value = e.cliente_id || '';
        }
        document.getElementById('edit-equipo-modal').classList.remove('hidden');
    } catch (err) {
        console.error(err);
        alert('Error de conexión');
    }
}

async function submitEditEquipo(ev) {
    ev.preventDefault();
    const id = document.getElementById('edit-equipo-id').value;
    if (!id) {
        alert('ID de equipo no válido');
        return;
    }
    const formData = new FormData(ev.target);
    const data = Object.fromEntries(formData.entries());
    try {
        const res = await fetch(`/equipos/${id}`, {
            method: 'PATCH',
            headers: {
                'Content-Type': 'application/json',
                'Accept': 'application/json'
            },
            body: JSON.stringify(data)
        });
        if (res.ok) {
            window.location.reload();
        } else {
            let msg = 'Error ' + res.status;
            try {
                const err = await res.json();
                if (err && err.error) msg += ': ' + err.error;
            } catch (_) {}
            alert(msg);
        }
    } catch (err) {
        console.error(err);
        alert('Error de conexión');
    }
}

async function deleteEquipo(id) {
    const confirmed = confirm('¿Seguro que deseas eliminar este equipo? Esta acción no se puede deshacer.');
    if (!confirmed) return;
    try {
        const res = await fetch(`/equipos/${id}`, {
            method: 'DELETE',
            headers: { 'Accept': 'application/json' }
        });
        if (res.ok) {
            window.location.reload();
        } else {
            let msg = 'Error ' + res.status;
            try {
                const err = await res.json();
                if (err && err.error) msg += ': ' + err.error;
            } catch (_) {}
            alert(msg);
        }
    } catch (err) {
        console.error(err);
        alert('Error de conexión');
    }
}
</script>
