<script>
function openMantencionDesdeBoton(btn) {
    if (!btn) return;
    const id = btn.dataset.equipoId || '';
    const nombre = btn.dataset.equipoNombre || '';
    openMantencionModal(id, nombre);
}

function openMantencionModal(id, nombre) {
    const modal = document.getElementById('mantencion-modal');
    const idInput = document.getElementById('mantencion-equipo-id');
    const nombreEl = document.getElementById('mantencion-equipo-nombre');
    if (!modal || !idInput) return;
    idInput.value = id || '';
    if (nombreEl) {
        nombreEl.textContent = nombre || '';
    }
    modal.classList.remove('hidden');
}

function closeMantencionModal() {
    const modal = document.getElementById('mantencion-modal');
    const form = document.getElementById('mantencion-form');
    if (form) {
        form.reset();
    }
    if (modal) {
        modal.classList.add('hidden');
    }
}

async function submitMantencion(ev) {
    ev.preventDefault();
    const form = ev.target;
    const idInput = document.getElementById('mantencion-equipo-id');
    const id = idInput ? idInput.value : '';
    if (!id) {
        alert('ID de equipo no válido');
        return;
    }
    const formData = new FormData(form);
    try {
        const res = await fetch(`/equipos/${id}/mantenciones`, {
            method: 'POST',
            headers: {
                'Accept': 'application/json'
            },
            body: formData
        });
        if (res.ok) {
            closeMantencionModal();
            window.location.reload();
        } else {
            let msg = 'Error ' + res.status;
            try {
                const err = await res.json();
                if (err && err.error) msg += ': ' + err.error;
            } catch (_) {}
            alert(msg);
        }
    } catch (err) {
        console.error(err);
        alert('Error de conexión');
    }
}

async function openDetalleEquipo(id) {
    try {
        const res = await fetch(`/equipos/${id}`, {
            headers: {
                'Accept': 'application/json'
            }
        });
        if (!res.ok) {
            alert('Error al cargar el equipo');
            return;
        }
        const e = await res.json();

        const nombreEl = document.getElementById('detalle-equipo-nombre');
        const marcaEl = document.getElementById('detalle-equipo-marca');
        const serieEl = document.getElementById('detalle-equipo-serie');
        const ubicacionEl = document.getElementById('detalle-equipo-ubicacion');
        const clienteEl = document.getElementById('detalle-equipo-cliente');
        const aplicacionEl = document.getElementById('detalle-equipo-aplicacion');
        const anioEl = document.getElementById('detalle-equipo-anio');
        const estadoEl = document.getElementById('detalle-equipo-estado');
        const mantencionesEl = document.getElementById('detalle-equipo-mantenciones');
        const creadoEl = document.getElementById('detalle-equipo-creado');

        if (!nombreEl) return;

        nombreEl.textContent = e.nombre || '';
        marcaEl.textContent = [e.marca || '', e.modelo || ''].filter(Boolean).join(' - ') || '-';
        serieEl.textContent = e.numero_serie || '-';
        ubicacionEl.textContent = e.ubicacion || '-';
        clienteEl.textContent = e.cliente || 'Sin asignar';
        aplicacionEl.textContent = e.aplicacion || '-';
        anioEl.textContent = e.anio_venta || '-';

        const estado = e.estado || 'desconocido';
        let estadoClass = 'bg-slate-700 text-slate-200 border border-slate-600';
        if (estado === 'operativo') {
            estadoClass = 'bg-emerald-600/20 text-emerald-300 border border-emerald-500/40';
        } else if (estado === 'en_reparacion') {
            estadoClass = 'bg-amber-500/20 text-amber-200 border border-amber-400/60';
        } else if (estado === 'baja') {
            estadoClass = 'bg-red-600/20 text-red-300 border border-red-500/40';
        }
        estadoEl.className = 'inline-flex items-center px-2 py-1 rounded-full text-xs font-medium ' + estadoClass;
        estadoEl.textContent = estado;

        mantencionesEl.innerHTML = '';
        const list = Array.isArray(e.mantenciones) ? e.mantenciones : [];
        if (list.length === 0) {
            mantencionesEl.innerHTML = '<p class="text-slate-500">No hay mantenciones registradas.</p>';
        } else {
            list.forEach(m => {
                const div = document.createElement('div');
                div.className = 'bg-slate-800/70 border border-slate-700 rounded-lg px-3 py-2';
                const fecha = m.fecha || '';
                const hora = m.hora || '';
                const trabajo = m.trabajo || '';
                const nota = m.nota || '';
                const realizado = m.realizado_por || '';
                const archivo = m.archivo || null;
                let fechaHoraTexto = '';
                if (fecha && hora) {
                    fechaHoraTexto = fecha + ' ' + hora;
                } else if (fecha) {
                    fechaHoraTexto = fecha;
                } else if (hora) {
                    fechaHoraTexto = hora;
                }
                let archivoHtml = '';
                if (archivo && archivo.ruta) {
                    archivoHtml =
                        '<div class="mt-1">' +
                            '<a href="' + archivo.ruta + '" target="_blank" class="text-[10px] text-blue-400 hover:text-blue-300 underline">Ver archivo</a>' +
                        '</div>';
                }
                div.innerHTML =
                    '<div class="flex justify-between items-start gap-2 mb-1">' +
                        '<div class="flex-1 min-w-0">' +
                            '<div class="text-[11px] font-medium text-slate-200 truncate">' + (trabajo || 'Mantención') + '</div>' +
                            (realizado ? '<div class="text-[10px] text-slate-400">Realizado por: ' + realizado + '</div>' : '') +
                        '</div>' +
                        '<div class="text-right flex-shrink-0">' +
                            (fechaHoraTexto ? '<div class="text-[10px] text-slate-400">' + fechaHoraTexto + '</div>' : '') +
                            archivoHtml +
                        '</div>' +
                    '</div>' +
                    (nota ? '<div class="text-[11px] text-slate-400 whitespace-pre-wrap mt-1">' + nota + '</div>' : '');
                mantencionesEl.appendChild(div);
            });
        }

        const ticketsEl = document.getElementById('detalle-equipo-tickets');
        if (ticketsEl) {
            ticketsEl.innerHTML = '';
            const tickets = Array.isArray(e.tickets) ? e.tickets : [];
            if (tickets.length === 0) {
                ticketsEl.innerHTML = '<p class="text-slate-500">No hay tickets asociados.</p>';
            } else {
                tickets.forEach(t => {
                    const tDiv = document.createElement('div');
                    tDiv.className = 'bg-slate-800/70 border border-slate-700 rounded-lg px-3 py-2 flex justify-between items-center gap-2';
                    
                    const estado = t.estado || 'pendiente';
                    let badgeClass = 'bg-slate-700 text-slate-300 border border-slate-600';
                    if (estado === 'pendiente' || estado === 'ingresado') badgeClass = 'bg-yellow-500/20 text-yellow-300 border border-yellow-500/30';
                    else if (estado === 'en_proceso' || estado === 'diagnostico' || estado === 'reparacion') badgeClass = 'bg-blue-500/20 text-blue-300 border border-blue-500/30';
                    else if (estado === 'hecho' || estado === 'terminado') badgeClass = 'bg-emerald-500/20 text-emerald-300 border border-emerald-500/30';
                    
                    const fechaCreacion = t.creado_en ? new Date(t.creado_en).toLocaleDateString('es-CL') : '';
                    
                    tDiv.innerHTML = 
                        '<div class="flex-1 min-w-0">' +
                            '<div class="flex items-center gap-2 mb-0.5">' +
                                '<span class="text-[10px] font-mono text-slate-500">#' + (t.codigo || t.id) + '</span>' +
                                '<span class="text-[11px] font-medium text-slate-200 truncate">' + (t.titulo || 'Sin título') + '</span>' +
                            '</div>' +
                            '<div class="text-[10px] text-slate-400 truncate">' + (t.descripcion || '') + '</div>' +
                        '</div>' +
                        '<div class="flex flex-col items-end gap-1">' +
                            '<span class="px-1.5 py-0.5 rounded text-[10px] border ' + badgeClass + '">' + estado + '</span>' +
                            '<span class="text-[10px] text-slate-500">' + fechaCreacion + '</span>' +
                        '</div>';
                    ticketsEl.appendChild(tDiv);
                });
            }
        }

        const creadoEn = e.creado_en ? new Date(e.creado_en) : null;
        const actualizadoEn = e.actualizado_en ? new Date(e.actualizado_en) : null;
        const partes = [];
        if (creadoEn) partes.push('Creado el ' + creadoEn.toLocaleString('es-CL'));
        if (actualizadoEn) partes.push('Actualizado el ' + actualizadoEn.toLocaleString('es-CL'));
        creadoEl.textContent = partes.join(' · ');

        document.getElementById('detalle-equipo-modal').classList.remove('hidden');
    } catch (err) {
        console.error(err);
        alert('Error de conexión');
    }
}

async function openEditEquipo(id) {
    try {
        const res = await fetch(`/equipos/${id}`);
        if (!res.ok) {
            alert('Error al cargar el equipo');
            return;
        }
        const e = await res.json();
        document.getElementById('edit-equipo-id').value = e.id || '';
        document.getElementById('edit-equipo-nombre').value = e.nombre || '';
        document.getElementById('edit-equipo-marca').value = e.marca || '';
        document.getElementById('edit-equipo-modelo').value = e.modelo || '';
        document.getElementById('edit-equipo-numero_serie').value = e.numero_serie || '';
        document.getElementById('edit-equipo-ubicacion').value = e.ubicacion || '';
        document.getElementById('edit-equipo-estado').value = e.estado || 'operativo';
        const clienteSelect = document.getElementById('edit-equipo-cliente');
        if (clienteSelect) {
            clienteSelect.value = e.cliente_id || '';
        }
        document.getElementById('edit-equipo-modal').classList.remove('hidden');
    } catch (err) {
        console.error(err);
        alert('Error de conexión');
    }
}

async function submitEditEquipo(ev) {
    ev.preventDefault();
    const id = document.getElementById('edit-equipo-id').value;
    if (!id) {
        alert('ID de equipo no válido');
        return;
    }
    const formData = new FormData(ev.target);
    const data = Object.fromEntries(formData.entries());
    try {
        const res = await fetch(`/equipos/${id}`, {
            method: 'PATCH',
            headers: {
                'Content-Type': 'application/json',
                'Accept': 'application/json'
            },
            body: JSON.stringify(data)
        });
        if (res.ok) {
            window.location.reload();
        } else {
            let msg = 'Error ' + res.status;
            try {
                const err = await res.json();
                if (err && err.error) msg += ': ' + err.error;
            } catch (_) {}
            alert(msg);
        }
    } catch (err) {
        console.error(err);
        alert('Error de conexión');
    }
}

async function deleteEquipo(id) {
    const confirmed = confirm('¿Seguro que deseas eliminar este equipo? Esta acción no se puede deshacer.');
    if (!confirmed) return;
    try {
        const res = await fetch(`/equipos/${id}`, {
            method: 'DELETE',
            headers: { 'Accept': 'application/json' }
        });
        if (res.ok) {
            window.location.reload();
        } else {
            let msg = 'Error ' + res.status;
            try {
                const err = await res.json();
                if (err && err.error) msg += ': ' + err.error;
            } catch (_) {}
            alert(msg);
        }
    } catch (err) {
        console.error(err);
        alert('Error de conexión');
    }
}
