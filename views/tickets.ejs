    <div class="bg-slate-800 p-6 rounded-xl w-full max-w-md shadow-2xl border border-slate-700">
        <h3 class="text-xl font-bold text-white mb-4">Nuevo Ticket</h3>
        <form action="/tickets" method="POST">
            <div class="mb-4">
                <label class="block text-slate-400 text-sm mb-2">Título</label>
                <input type="text" name="titulo" required class="w-full bg-slate-900 border border-slate-700 rounded p-2 text-white focus:outline-none focus:border-blue-500">
            </div>
            <div class="mb-4">
                <label class="block text-slate-400 text-sm mb-2">Tipo de ticket</label>
                <select name="tipo" required class="w-full bg-slate-900 border border-slate-700 rounded p-2 text-white focus:outline-none focus:border-blue-500 text-sm">
                    <option value="mantencion">Mantención (M)</option>
                    <option value="visita_tecnica">Visita técnica (V)</option>
                    <option value="garantia">Garantía (G)</option>
                </select>
            </div>
            
            <div class="mb-4">
                <label class="block text-slate-400 text-sm mb-2">Cliente (Opcional)</label>
                <select name="cliente_id" class="w-full bg-slate-900 border border-slate-700 rounded p-2 text-white focus:outline-none focus:border-blue-500">
                    <option value="">Seleccionar Cliente</option>
                    <% if (typeof clientes !== 'undefined') { %>
                        <% clientes.forEach(c => { %>
                            <option value="<%= c.id %>"><%= c.nombre %></option>
                        <% }); %>
                    <% } %>
                </select>
            </div>

            <div class="mb-4">
                <label class="block text-slate-400 text-sm mb-2">Asignar a (Notificación por correo)</label>
                <select name="asignado_a" class="w-full bg-slate-900 border border-slate-700 rounded p-2 text-white focus:outline-none focus:border-blue-500">
                    <option value="">Seleccionar Usuario</option>
                    <% if (typeof usuarios !== 'undefined') { %>
                        <% usuarios.forEach(u => { %>
                            <option value="<%= u.id %>"><%= u.nombre %></option>
                        <% }); %>
                    <% } %>
                </select>
            </div>

            <div class="mb-4">
                <label class="block text-slate-400 text-sm mb-2">Descripción</label>
                <textarea name="descripcion" rows="3" class="w-full bg-slate-900 border border-slate-700 rounded p-2 text-white focus:outline-none focus:border-blue-500"></textarea>
            </div>
            <div class="flex justify-end gap-3 mt-6">
                <button type="button" onclick="document.getElementById('new-ticket-modal').classList.add('hidden')" class="px-4 py-2 text-slate-300 hover:text-white">Cancelar</button>
                <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded">Crear</button>
            </div>
        </form>
    </div>
</div>

<script>
let currentTicketId = null;
let currentTicketStatus = null;

const TICKET_PHASES = [
    { 
        id: 'ingresado', 
        label: 'Ingresado', 
        icon: 'ph-file-text',
        style: {
            active: 'bg-slate-500 ring-slate-500 shadow-slate-500/30',
            completed: 'text-slate-400 border-slate-500/50',
            text: 'text-slate-400',
            badge: 'bg-slate-500/10 text-slate-400 border-slate-500/20'
        }
    },
    { 
        id: 'diagnostico', 
        label: 'Diagnóstico', 
        icon: 'ph-stethoscope',
        style: {
            active: 'bg-blue-500 ring-blue-500 shadow-blue-500/30',
            completed: 'text-blue-400 border-blue-500/50',
            text: 'text-blue-400',
            badge: 'bg-blue-500/10 text-blue-400 border-blue-500/20'
        }
    },
    { 
        id: 'presupuesto', 
        label: 'Presupuesto', 
        icon: 'ph-currency-dollar',
        style: {
            active: 'bg-amber-500 ring-amber-500 shadow-amber-500/30',
            completed: 'text-amber-400 border-amber-500/50',
            text: 'text-amber-400',
            badge: 'bg-amber-500/10 text-amber-400 border-amber-500/20'
        }
    },
    { 
        id: 'reparacion', 
        label: 'Reparación', 
        icon: 'ph-wrench',
        style: {
            active: 'bg-orange-500 ring-orange-500 shadow-orange-500/30',
            completed: 'text-orange-400 border-orange-500/50',
            text: 'text-orange-400',
            badge: 'bg-orange-500/10 text-orange-400 border-orange-500/20'
        }
    },
    { 
        id: 'observacion', 
        label: 'Observación', 
        icon: 'ph-eye',
        style: {
            active: 'bg-purple-500 ring-purple-500 shadow-purple-500/30',
            completed: 'text-purple-400 border-purple-500/50',
            text: 'text-purple-400',
            badge: 'bg-purple-500/10 text-purple-400 border-purple-500/20'
        }
    },
    { 
        id: 'terminado', 
        label: 'Terminado', 
        icon: 'ph-check-circle',
        style: {
            active: 'bg-emerald-500 ring-emerald-500 shadow-emerald-500/30',
            completed: 'text-emerald-400 border-emerald-500/50',
            text: 'text-emerald-400',
            badge: 'bg-emerald-500/10 text-emerald-400 border-emerald-500/20'
        }
    }
];

async function updateTicketStatus(newStatus) {
    if (!currentTicketId) return;
    if (!confirm(`¿Cambiar estado a "${newStatus.toUpperCase()}"?`)) return;

    try {
        const res = await fetch(`/tickets/${currentTicketId}/estado`, {
            method: 'PATCH',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ estado: newStatus })
        });
        
        if (res.ok) {
            const data = await res.json();
            currentTicketStatus = data.ticket.estado;
            renderPipeline(currentTicketStatus);
            document.getElementById('ticket-details-estado').textContent = currentTicketStatus;
            
            // Recargar historial para ver el cambio
            loadTicketHistory(currentTicketId);
        } else {
            alert('Error al actualizar estado');
        }
    } catch (e) {
        console.error(e);
        alert('Error de conexión');
    }
}

function renderPipeline(currentStatus) {
    const container = document.getElementById('ticket-pipeline');
    if (!container) return;
    container.innerHTML = '';

    // Mapeo simple para estados antiguos
    let statusToUse = currentStatus;
    if (currentStatus === 'pendiente') statusToUse = 'ingresado';
    if (currentStatus === 'en_proceso') statusToUse = 'reparacion';
    if (currentStatus === 'hecho') statusToUse = 'terminado';

    const currentIndex = TICKET_PHASES.findIndex(p => p.id === statusToUse);
    // Si no coincide (ej. estado legacy raro), default a 0
    const activeIndex = currentIndex === -1 ? 0 : currentIndex;

    TICKET_PHASES.forEach((phase, index) => {
        const isCompleted = index < activeIndex;
        const isActive = index === activeIndex;
        
        const step = document.createElement('div');
        step.className = `flex flex-col items-center gap-1 relative z-10 cursor-pointer group`;
        step.onclick = () => updateTicketStatus(phase.id);

        let circleClass = '';
        let iconClass = '';
        let textClass = '';

        if (isActive) {
            circleClass = `w-8 h-8 rounded-full flex items-center justify-center text-white shadow-lg ring-2 ring-offset-2 ring-offset-slate-900 transition-all transform scale-110 ${phase.style.active}`;
            iconClass = `ph ${phase.icon} text-lg`;
            textClass = `text-[10px] font-bold mt-1 uppercase tracking-wide ${phase.style.text}`;
        } else if (isCompleted) {
            circleClass = `w-8 h-8 rounded-full flex items-center justify-center bg-slate-800 border hover:bg-slate-700 transition-colors ${phase.style.completed}`;
            iconClass = `ph ${phase.icon} text-lg`;
            textClass = `text-[10px] font-medium text-slate-400 mt-1 group-hover:text-slate-300`;
        } else {
            // Future
            circleClass = `w-8 h-8 rounded-full flex items-center justify-center bg-slate-800/50 text-slate-600 border border-slate-700 hover:border-slate-600 hover:text-slate-500 transition-colors`;
            iconClass = `ph ${phase.icon} text-lg`;
            textClass = `text-[10px] font-medium text-slate-600 mt-1`;
        }

        step.innerHTML = `
            <div class="${circleClass}">
                <i class="${iconClass}"></i>
            </div>
            <span class="${textClass}">${phase.label}</span>
        `;
        
        container.appendChild(step);
    });
    
    // Dibujar linea de fondo
    const line = document.createElement('div');
    line.className = 'absolute top-4 left-0 w-full h-0.5 bg-slate-800 -z-0';
    container.style.position = 'relative'; // Asegurar posicionamiento
    container.insertBefore(line, container.firstChild);
}

async function deleteTicket(id) {
    const confirmed = confirm('¿Seguro que deseas eliminar este ticket? Esta acción no se puede deshacer.');
    if (!confirmed) return;
    try {
        const res = await fetch('/tickets/' + id, { method: 'DELETE' });
        if (res.ok) {
            window.location.reload();
        } else {
            alert('Error al eliminar ticket');
        }
    } catch (e) {
        console.error(e);
        alert('Error de conexión');
    }
}

async function openTicketDetails(id) {
    currentTicketId = id;
    try {
        const res = await fetch(`/tickets/${id}`);
        if (!res.ok) {
            alert('Error al cargar el ticket');
            return;
        }
        const t = await res.json();
        document.getElementById('ticket-details-title').textContent = t.titulo || '';
        
        // Actualizar estado global y renderizar pipeline
        currentTicketStatus = t.estado || 'ingresado';
        document.getElementById('ticket-details-estado').textContent = currentTicketStatus;
        renderPipeline(currentTicketStatus);

        document.getElementById('ticket-details-codigo').textContent = t.codigo || '-';
        const tipoMap = {
            mantencion: 'Mantención (M)',
            visita_tecnica: 'Visita técnica (V)',
            garantia: 'Garantía (G)',
        };
        document.getElementById('ticket-details-tipo').textContent = tipoMap[t.tipo] || (t.tipo || '-');
        document.getElementById('ticket-details-creado').textContent = t.creado_por_nombre || 'Desconocido';
        document.getElementById('ticket-details-asignado').textContent = t.asignado_a_nombre || 'Sin asignar';
        document.getElementById('ticket-details-cliente').textContent = t.cliente_nombre || '-';
        document.getElementById('ticket-details-equipo').textContent = t.equipo_nombre || '-';
        document.getElementById('ticket-details-descripcion').textContent = t.descripcion || 'Sin descripción';
        const creado = t.creado_en ? new Date(t.creado_en) : null;
        const terminado = t.terminado_en ? new Date(t.terminado_en) : null;
        document.getElementById('ticket-details-fecha-creacion').textContent = creado ? creado.toLocaleString() : '-';
        document.getElementById('ticket-details-fecha-termino').textContent = terminado ? terminado.toLocaleString() : '-';
        
        // Cargar historial y comentarios
        if (typeof loadTicketHistory === 'function') loadTicketHistory(id);
        if (typeof loadTicketComments === 'function') loadTicketComments(id);

        document.getElementById('ticket-details-modal').classList.remove('hidden');
    } catch (e) {
        console.error(e);
        alert('Error de conexión');
    }
}

async function loadTicketHistory(id) {
    const container = document.getElementById('ticket-history');
    if (!container) return;
    container.innerHTML = '<p class="text-xs text-slate-500">Cargando historial...</p>';
    try {
        const res = await fetch(`/tickets/${id}/historial`);
        if (!res.ok) {
            container.innerHTML = '<p class="text-xs text-red-400">No se pudo cargar el historial.</p>';
            return;
        }
        const historial = await res.json();
        if (!historial || historial.length === 0) {
            container.innerHTML = '<p class="text-xs text-slate-500">Sin cambios registrados.</p>';
            return;
        }
        container.innerHTML = '';
        historial.forEach(h => {
            const fecha = h.creado_en ? new Date(h.creado_en) : null;
            const tipo = h.tipo_cambio === 'estado' ? 'Estado' : (h.tipo_cambio === 'asignacion' ? 'Asignación' : h.tipo_cambio);
            const linea = document.createElement('div');
            linea.className = 'text-xs text-slate-300 flex flex-col border border-slate-800 rounded-md px-2 py-1 bg-slate-900/60';
            const header = document.createElement('div');
            header.className = 'flex justify-between items-center mb-0.5';
            const left = document.createElement('span');
            left.className = 'font-medium text-slate-200';
            left.textContent = tipo;
            const right = document.createElement('span');
            right.className = 'text-[11px] text-slate-500';
            right.textContent = fecha ? fecha.toLocaleString() : '';
            header.appendChild(left);
            header.appendChild(right);
            const detalle = document.createElement('div');
            detalle.className = 'text-[11px] text-slate-300';
            const usuario = h.usuario_nombre || 'Usuario';
            const antes = h.valor_anterior || '-';
            const despues = h.valor_nuevo || '-';
            detalle.textContent = `${usuario}: ${antes} → ${despues}`;
            linea.appendChild(header);
            linea.appendChild(detalle);
            container.appendChild(linea);
        });
    } catch (e) {
        console.error(e);
        container.innerHTML = '<p class="text-xs text-red-400">Error al cargar historial.</p>';
    }
}

async function loadTicketComments(id) {
    const container = document.getElementById('ticket-comments');
    if (!container) return;
    container.innerHTML = '<p class="text-xs text-slate-500">Cargando comentarios...</p>';
    try {
        const res = await fetch(`/tickets/${id}/comentarios`);
        if (!res.ok) {
            console.error('Error fetching comments:', res.status, res.statusText);
            container.innerHTML = '<p class="text-xs text-red-400">No se pudieron cargar los comentarios.</p>';
            return;
        }
        const comentarios = await res.json();
        if (!comentarios || comentarios.length === 0) {
            container.innerHTML = '<p class="text-xs text-slate-500 italic">No hay comentarios.</p>';
            return;
        }
        container.innerHTML = '';
        comentarios.forEach(c => {
            const item = document.createElement('div');
            item.className = 'border border-slate-800 rounded-lg px-3 py-2 bg-slate-900/60';
            
            const header = document.createElement('div');
            header.className = 'flex justify-between items-center mb-1';
            
            const leftHeader = document.createElement('div');
            leftHeader.className = 'flex items-center gap-2';
            
            const autor = document.createElement('span');
            autor.className = 'text-xs font-medium text-slate-200';
            autor.textContent = c.autor_nombre || 'Usuario';
            leftHeader.appendChild(autor);

            if (c.fase) {
                const badge = document.createElement('span');
                // Encontrar info de fase para color
                const phaseInfo = TICKET_PHASES.find(p => p.id === c.fase);
                const badgeClass = phaseInfo ? phaseInfo.style.badge : 'bg-slate-500/10 text-slate-400 border-slate-500/20';
                badge.className = `text-[10px] px-1.5 py-0.5 rounded-full border uppercase tracking-wider ${badgeClass}`;
                badge.textContent = phaseInfo ? phaseInfo.label : c.fase;
                leftHeader.appendChild(badge);
            }

            const fecha = document.createElement('span');
            fecha.className = 'text-[11px] text-slate-500';
            const f = c.creado_en ? new Date(c.creado_en) : null;
            fecha.textContent = f ? f.toLocaleString() : '';
            
            header.appendChild(leftHeader);
            header.appendChild(fecha);
            
            const cuerpo = document.createElement('p');
            cuerpo.className = 'text-xs text-slate-200 whitespace-pre-wrap';
            cuerpo.textContent = c.contenido || '';
            item.appendChild(header);
            item.appendChild(cuerpo);
            container.appendChild(item);
        });
    } catch (e) {
        console.error(e);
        container.innerHTML = '<p class="text-xs text-red-400">Error al cargar comentarios.</p>';
    }
}

document.addEventListener('DOMContentLoaded', () => {
    const form = document.getElementById('add-comment-form');
    if (!form) return;
    form.addEventListener('submit', async (e) => {
        e.preventDefault();
        const textarea = document.getElementById('comment-content');
        if (!textarea || !currentTicketId) return;
        const contenido = textarea.value.trim();
        if (!contenido) return;
        try {
            const res = await fetch(`/tickets/${currentTicketId}/comentarios`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ 
                    contenido,
                    fase: currentTicketStatus // Enviar la fase actual
                })
            });
            if (!res.ok) {
                alert('Error al agregar comentario');
                return;
            }
            textarea.value = '';
            await loadTicketComments(currentTicketId);
        } catch (e) {
            console.error(e);
            alert('Error de conexión');
        }
    });
});
</script>

