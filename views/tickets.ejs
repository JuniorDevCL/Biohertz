<script>
let currentTicketId = null;
let currentTicketStatus = null;

// Auto-open modal if query param exists
if (new URLSearchParams(window.location.search).get('new')) {
    const modal = document.getElementById('new-ticket-modal');
    if (modal) modal.classList.remove('hidden');
}

// Equipment search logic
document.addEventListener('DOMContentLoaded', () => {
    const inputSerie = document.getElementById('input_serie');
    const inputNombre = document.getElementById('input_equipo_nombre');
    const inputModelo = document.getElementById('input_equipo_modelo');
    const inputMarca = document.getElementById('input_equipo_marca');
    const inputUbicacion = document.getElementById('input_equipo_ubicacion');
    const msgSerie = document.getElementById('serie_msg');
    const loadingSerie = document.getElementById('serie_loading');
    let searchTimeout;

    if (inputSerie) {
        inputSerie.addEventListener('input', (e) => {
            const val = e.target.value.trim();
            clearTimeout(searchTimeout);
            
            if (val.length < 3) {
                if (msgSerie) msgSerie.textContent = '';
                if (loadingSerie) loadingSerie.classList.add('hidden');
                return;
            }

            if (loadingSerie) loadingSerie.classList.remove('hidden');
            if (msgSerie) {
                msgSerie.textContent = 'Buscando...';
                msgSerie.className = 'text-[10px] mt-1 h-4 text-blue-400';
            }

            searchTimeout = setTimeout(async () => {
                try {
                    const res = await fetch(`/equipos?serie=${encodeURIComponent(val)}`, {
                        headers: { 'Accept': 'application/json' }
                    });
                    if (res.ok) {
                        const data = await res.json();
                        const equipos = data.equipos || [];
                        // Find exact match (case insensitive)
                        const exact = equipos.find(eq => eq.numero_serie && eq.numero_serie.toLowerCase() === val.toLowerCase());
                        
                        if (exact) {
                            if (inputNombre) inputNombre.value = exact.nombre || '';
                            if (inputModelo) inputModelo.value = exact.modelo || '';
                            if (inputMarca) inputMarca.value = exact.marca || '';
                            if (inputUbicacion) inputUbicacion.value = exact.ubicacion || '';
                            if (msgSerie) {
                                msgSerie.textContent = 'Equipo encontrado. Datos cargados.';
                                msgSerie.className = 'text-[10px] mt-1 h-4 text-emerald-400';
                            }
                        } else {
                            // Don't clear inputs, user might be typing a new equipment's data
                            if (msgSerie) {
                                msgSerie.textContent = 'Equipo no encontrado. Se creará uno nuevo.';
                                msgSerie.className = 'text-[10px] mt-1 h-4 text-orange-400';
                            }
                        }
                    }
                } catch (err) {
                    console.error(err);
                    if (msgSerie) {
                        msgSerie.textContent = 'Error buscando equipo.';
                        msgSerie.className = 'text-[10px] mt-1 h-4 text-red-400';
                    }
                } finally {
                    if (loadingSerie) loadingSerie.classList.add('hidden');
                }
            }, 500);
        });
    }
});

