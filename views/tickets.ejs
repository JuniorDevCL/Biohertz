<div class="max-w-7xl mx-auto px-6 py-8">
    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4 mb-8">
        <div class="space-y-2">
            <div class="flex items-center gap-3">
                <h1 class="text-3xl font-bold text-white tracking-tight">Tickets</h1>
                <span class="inline-flex items-center px-3 py-1.5 rounded-full bg-slate-800 text-xs text-slate-200 border border-slate-700">
                    <i class="ph ph-ticket text-sm mr-1.5"></i>
                    Tickets totales: <span class="ml-1 font-semibold"><%= typeof totalTickets !== 'undefined' ? totalTickets : (tickets && tickets.length ? tickets.length : 0) %></span>
                </span>
            </div>
            <p class="text-slate-400 text-sm">Gestiona y haz seguimiento de los tickets de servicio.</p>
        </div>
        <div class="flex items-center gap-3">
            <div class="hidden sm:flex items-center gap-2 px-4 py-2 rounded-xl bg-slate-900 border border-slate-800 text-xs text-slate-400">
                <span class="inline-flex items-center justify-center w-7 h-7 rounded-lg bg-blue-500/20 text-blue-400">
                    <i class="ph ph-ticket text-sm"></i>
                </span>
                <div class="flex flex-col">
                    <span class="uppercase tracking-wider">Tickets</span>
                    <span class="text-sm font-semibold text-slate-100"><%= tickets && tickets.length ? tickets.length : 0 %></span>
                </div>
            </div>
            <a href="/tickets/export/csv" class="bg-slate-800 hover:bg-slate-700 text-slate-300 px-4 py-2 rounded-xl transition-colors flex items-center text-sm font-medium border border-slate-700" title="Descargar reporte en CSV">
                <i class="ph ph-download-simple mr-2 text-base"></i>
                CSV
            </a>
            <button onclick="document.getElementById('new-ticket-modal').classList.remove('hidden')" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-xl transition-colors flex items-center text-sm font-medium shadow-sm shadow-blue-500/30">
                <i class="ph ph-plus mr-2 text-base"></i>
                Nuevo Ticket
            </button>
        </div>
    </div>

    <div class="bg-slate-900 border border-slate-800 rounded-2xl shadow-xl p-6">
        <form action="/tickets" method="GET" class="mb-4 flex flex-wrap items-center gap-3">
            <div class="flex-1 min-w-[200px]">
                <input 
                    type="text" 
                    name="q" 
                    value="<%= typeof query !== 'undefined' ? query : '' %>" 
                    placeholder="Buscar por título o descripción" 
                    class="w-full bg-slate-950 border border-slate-700 rounded-lg px-3 py-2 text-sm text-white placeholder-slate-500 focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500">
            </div>
            <div>
                <select name="tipo" class="bg-slate-950 border border-slate-700 rounded-lg px-3 py-2 text-sm text-white focus:outline-none focus:border-blue-500">
                    <option value="">Todos los tipos</option>
                    <option value="mantencion" <%= queryTipo === 'mantencion' ? 'selected' : '' %>>Mantención (M)</option>
                    <option value="visita_tecnica" <%= queryTipo === 'visita_tecnica' ? 'selected' : '' %>>Visita técnica (V)</option>
                    <option value="garantia" <%= queryTipo === 'garantia' ? 'selected' : '' %>>Garantía (G)</option>
                </select>
            </div>
            <div>
                <select name="estado_view" class="bg-slate-950 border border-slate-700 rounded-lg px-3 py-2 text-sm text-white focus:outline-none focus:border-blue-500">
                    <option value="">Todos los estados</option>
                    <option value="activos" <%= estadoView === 'activos' ? 'selected' : '' %>>Activos</option>
                    <option value="resueltos" <%= estadoView === 'resueltos' ? 'selected' : '' %>>Resueltos</option>
                </select>
            </div>
            <div>
                <button type="submit" class="bg-slate-800 hover:bg-slate-700 text-slate-100 px-4 py-2 rounded-lg text-sm border border-slate-700">
                    Filtrar
                </button>
            </div>
        </form>
        <% if (typeof tickets !== 'undefined' && tickets && tickets.length > 0) { %>
            <div class="overflow-x-auto">
                <table class="w-full text-left border-collapse">
                    <thead>
                        <tr class="bg-slate-800/30 text-xs uppercase text-slate-400 font-semibold tracking-wider">
                            <th class="py-3 px-4">Título / Código</th>
                            <th class="py-3 px-4">Estado</th>
                            <th class="py-3 px-4">Creado por</th>
                            <th class="py-3 px-4">Asignado</th>
                            <th class="py-3 px-4">Cliente</th>
                            <th class="py-3 px-4">Equipo</th>
                            <th class="py-3 px-4">F. creación</th>
                            <th class="py-3 px-4">F. término</th>
                            <th class="py-3 px-4">Acciones</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-slate-800">
                        <% tickets.forEach(ticket => { %>
                            <tr class="hover:bg-slate-800/40 transition-colors group">
                                <td class="py-3 px-4 font-medium text-white">
                                    <button type="button" class="text-left" onclick="openTicketDetails('<%= ticket.id %>')">
                                        <div class="flex flex-col gap-0.5">
                                            <div class="flex items-center gap-2">
                                                <% if (ticket.codigo) { %>
                                                    <span class="inline-flex items-center px-2 py-0.5 rounded-full text-[11px] bg-slate-800 border border-slate-700 text-slate-100">
                                                        <%= ticket.codigo %>
                                                    </span>
                                                <% } %>
                                                <span class="group-hover:text-blue-400 transition-colors"><%= ticket.titulo %></span>
                                            </div>
                                            <span class="block text-xs text-slate-500">
                                                <%= ticket.asignado_a_nombre || 'Sin asignar' %>
                                            </span>
                                            <% if (ticket.tipo) { %>
                                                <span class="text-[11px] text-slate-400">
                                                    <%= ticket.tipo === 'mantencion'
                                                        ? 'Mantención (M)'
                                                        : (ticket.tipo === 'visita_tecnica'
                                                            ? 'Visita técnica (V)'
                                                            : (ticket.tipo === 'garantia'
                                                                ? 'Garantía (G)'
                                                                : ticket.tipo)) %>
                                                </span>
                                            <% } %>
                                        </div>
                                    </button>
                                </td>
                                <td class="py-3 px-4">
                                    <div class="flex flex-col gap-1">
                                        <span class="px-2 py-1 rounded text-xs font-medium <%= ticket.estado === 'pendiente' ? 'bg-orange-500/20 text-orange-400' : (ticket.estado === 'en_proceso' ? 'bg-blue-500/20 text-blue-400' : 'bg-green-500/20 text-green-400') %>">
                                            <%= ticket.estado %>
                                        </span>
                                        <span class="inline-flex items-center px-2 py-0.5 rounded-full text-[11px] font-medium border <%= (ticket.estado === 'hecho' || ticket.estado === 'terminado') ? 'bg-emerald-500/10 text-emerald-400 border-emerald-500/40' : 'bg-amber-500/10 text-amber-400 border-amber-500/40' %>">
                                            <%= (ticket.estado === 'hecho' || ticket.estado === 'terminado') ? 'Resuelto' : 'Activo' %>
                                        </span>
                                    </div>
                                </td>
                                <td class="py-3 px-4 text-slate-300"><%= ticket.creado_por_nombre || 'Desconocido' %></td>
                                <td class="py-3 px-4 text-slate-300"><%= ticket.asignado_a_nombre || 'Desconocido' %></td>
                                <td class="py-3 px-4 text-slate-300"><%= ticket.cliente_nombre || '-' %></td>
                                <td class="py-3 px-4 text-slate-300"><%= ticket.equipo_nombre || '-' %></td>
                                <td class="py-3 px-4 text-slate-400"><%= new Date(ticket.creado_en).toLocaleDateString() %></td>
                                <td class="py-3 px-4 text-slate-400"><%= ticket.terminado_en ? new Date(ticket.terminado_en).toLocaleDateString() : '-' %></td>
                                <td class="py-3 px-4">
                                    <div class="flex flex-wrap items-center gap-2">
                                        <button type="button" onclick="openTicketDetails('<%= ticket.id %>')" class="inline-flex items-center px-3 py-1.5 rounded-full bg-slate-800 hover:bg-slate-700 text-slate-200 text-xs font-medium border border-slate-600/60 transition-colors" title="Ver detalle del ticket">
                                            <i class="ph ph-eye text-sm mr-1.5"></i>
                                            Ver detalle
                                        </button>
                                        <a href="/tickets/<%= ticket.id %>" class="inline-flex items-center px-3 py-1.5 rounded-full bg-blue-600/20 hover:bg-blue-600/40 text-blue-200 text-xs font-medium border border-blue-500/40 transition-colors" title="Abrir página del ticket">
                                            <i class="ph ph-arrow-up-right text-sm mr-1.5"></i>
                                            Abrir ticket
                                        </a>
                                        <% if (typeof user !== 'undefined' && user && user.rol === 'admin') { %>
                                            <button type="button" onclick="deleteTicket('<%= ticket.id %>')" class="inline-flex items-center px-3 py-1.5 rounded-full bg-red-600/20 hover:bg-red-600/40 text-red-200 text-xs font-medium border border-red-500/40 transition-colors" title="Eliminar ticket">
                                                <i class="ph ph-trash text-sm mr-1.5"></i>
                                                Eliminar
                                            </button>
                                        <% } %>
                                    </div>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <div class="text-center py-12">
                <div class="text-slate-500 mb-4 text-5xl"><i class="ph ph-ticket"></i></div>
                <p class="text-slate-400 text-lg">No hay tickets registrados.</p>
                <p class="text-slate-500 text-sm">Crea uno nuevo para comenzar.</p>
            </div>
        <% } %>
    </div>
</div>

<!-- Modal Nuevo Ticket -->
