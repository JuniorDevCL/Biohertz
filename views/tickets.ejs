<div class="max-w-7xl mx-auto px-6 py-8">
    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4 mb-8">
        <div>
            <h1 class="text-3xl font-bold text-white tracking-tight">Tickets</h1>
            <p class="text-slate-400 text-sm mt-1">Gestiona y haz seguimiento de los tickets de servicio.</p>
        </div>
        <div class="flex items-center gap-3">
            <div class="hidden sm:flex items-center gap-2 px-4 py-2 rounded-xl bg-slate-900 border border-slate-800 text-xs text-slate-400">
                <span class="inline-flex items-center justify-center w-7 h-7 rounded-lg bg-blue-500/20 text-blue-400">
                    <i class="ph ph-ticket text-sm"></i>
                </span>
                <div class="flex flex-col">
                    <span class="uppercase tracking-wider">Total</span>
                    <span class="text-sm font-semibold text-slate-100"><%= tickets && tickets.length ? tickets.length : 0 %></span>
                </div>
            </div>
            <button onclick="document.getElementById('new-ticket-modal').classList.remove('hidden')" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-xl transition-colors flex items-center text-sm font-medium shadow-sm shadow-blue-500/30">
                <i class="ph ph-plus mr-2 text-base"></i>
                Nuevo Ticket
            </button>
        </div>
    </div>

    <div class="bg-slate-900 border border-slate-800 rounded-2xl shadow-xl p-6">
        <% if (typeof tickets !== 'undefined' && tickets && tickets.length > 0) { %>
            <div class="overflow-x-auto">
                <table class="w-full text-left border-collapse">
                    <thead>
                        <tr class="bg-slate-800/30 text-xs uppercase text-slate-400 font-semibold tracking-wider">
                            <th class="py-3 px-4">Título</th>
                            <th class="py-3 px-4">Estado</th>
                            <th class="py-3 px-4">Creado por</th>
                            <th class="py-3 px-4">Asignado</th>
                            <th class="py-3 px-4">Cliente</th>
                            <th class="py-3 px-4">Equipo</th>
                            <th class="py-3 px-4">F. creación</th>
                            <th class="py-3 px-4">F. término</th>
                            <th class="py-3 px-4">Acciones</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-slate-800">
                        <% tickets.forEach(ticket => { %>
                            <tr class="hover:bg-slate-800/40 transition-colors group">
                                <td class="py-3 px-4 font-medium text-white">
                                    <button type="button" class="text-left">
                                        <span onclick="openTicketDetails('<%= ticket.id %>')" class="group-hover:text-blue-400 transition-colors">
                                            <%= ticket.titulo %>
                                        </span>
                                        <span class="block text-xs text-slate-500 mt-0.5">
                                            <%= ticket.asignado_a_nombre || 'Sin asignar' %>
                                        </span>
                                </td>
                                <td class="py-3 px-4">
                                    <span class="px-2 py-1 rounded text-xs font-medium <%= ticket.estado === 'pendiente' ? 'bg-orange-500/20 text-orange-400' : (ticket.estado === 'en_proceso' ? 'bg-blue-500/20 text-blue-400' : 'bg-green-500/20 text-green-400') %>">
                                    <span class="px-2 py-1 rounded text-xs font-medium <%= ticket.estado === 'pendiente' ? 'bg-orange-500/20 text-orange-400' : (ticket.estado === 'en_proceso' ? 'bg-blue-500/20 text-blue-400' : 'bg-green-500/20 text-green-400') %>">
                                        <%= ticket.estado %>
                                    </span>
                                </td>
                                <td class="py-3 px-4 text-slate-300"><%= ticket.creado_por_nombre || 'Desconocido' %></td>
                                <td class="py-3 px-4 text-slate-300"><%= ticket.creado_por_nombre || 'Desconocido' %></td>
                                <td class="py-3 px-4 text-slate-300"><%= ticket.cliente_nombre || '-' %></td>
                                <td class="py-3 px-4 text-slate-300"><%= ticket.equipo_nombre || '-' %></td>
                                <td class="py-3 px-4 text-slate-400"><%= new Date(ticket.creado_en).toLocaleDateString() %></td>
                                <td class="py-3 px-4 text-slate-400"><%= ticket.terminado_en ? new Date(ticket.terminado_en).toLocaleDateString() : '-' %></td>
                                <td class="py-3 px-4">
                                    <div class="flex items-center gap-2">
                                        <a href="/tickets/<%= ticket.id %>" class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-slate-800 hover:bg-slate-700 text-slate-200 transition-colors" title="Ver detalle">
                                            <i class="ph ph-eye text-sm"></i>
                                        </a>
                                        <% if (typeof user !== 'undefined' && user && user.rol === 'admin') { %>
                                            <button type="button" onclick="deleteTicket('<%= ticket.id %>')" class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-red-900/40 hover:bg-red-700/70 text-red-200 transition-colors" title="Eliminar ticket">
                                                <i class="ph ph-trash text-sm"></i>
                                            </button>
                                        <% } %>
                                    </div>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <div class="text-center py-12">
                <div class="text-slate-500 mb-4 text-5xl"><i class="ph ph-ticket"></i></div>
                <p class="text-slate-400 text-lg">No hay tickets registrados.</p>
                <p class="text-slate-500 text-sm">Crea uno nuevo para comenzar.</p>
            </div>
        <% } %>
    </div>
</div>

<!-- Modal Nuevo Ticket -->
<div id="new-ticket-modal" class="fixed inset-0 bg-black/50 hidden flex items-center justify-center z-50">
    <div class="bg-slate-800 p-6 rounded-xl w-full max-w-md shadow-2xl border border-slate-700">
        <h3 class="text-xl font-bold text-white mb-4">Nuevo Ticket</h3>
        <form action="/tickets" method="POST">
            <div class="mb-4">
                <label class="block text-slate-400 text-sm mb-2">Título</label>
                <input type="text" name="titulo" required class="w-full bg-slate-900 border border-slate-700 rounded p-2 text-white focus:outline-none focus:border-blue-500">
            </div>
            
            <div class="mb-4">
                <label class="block text-slate-400 text-sm mb-2">Cliente (Opcional)</label>
                <select name="cliente_id" class="w-full bg-slate-900 border border-slate-700 rounded p-2 text-white focus:outline-none focus:border-blue-500">
                    <option value="">Seleccionar Cliente</option>
                    <% if (typeof clientes !== 'undefined') { %>
                        <% clientes.forEach(c => { %>
                            <option value="<%= c.id %>"><%= c.nombre %></option>
                        <% }); %>
                    <% } %>
                </select>
            </div>

            <div class="mb-4">
                <label class="block text-slate-400 text-sm mb-2">Asignar a (Notificación por correo)</label>
                <select name="asignado_a" class="w-full bg-slate-900 border border-slate-700 rounded p-2 text-white focus:outline-none focus:border-blue-500">
                    <option value="">Seleccionar Usuario</option>
                    <% if (typeof usuarios !== 'undefined') { %>
                        <% usuarios.forEach(u => { %>
                            <option value="<%= u.id %>"><%= u.nombre %></option>
                        <% }); %>
                    <% } %>
                </select>
            </div>

            <div class="mb-4">
                <label class="block text-slate-400 text-sm mb-2">Descripción</label>
                <textarea name="descripcion" rows="3" class="w-full bg-slate-900 border border-slate-700 rounded p-2 text-white focus:outline-none focus:border-blue-500"></textarea>
            </div>
            <div class="flex justify-end gap-3 mt-6">
                <button type="button" onclick="document.getElementById('new-ticket-modal').classList.add('hidden')" class="px-4 py-2 text-slate-300 hover:text-white">Cancelar</button>
                <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded">Crear</button>
            </div>
        </form>
    </div>
</div>

<script>
async function deleteTicket(id) {
    const confirmed = confirm('¿Seguro que deseas eliminar este ticket? Esta acción no se puede deshacer.');
    if (!confirmed) return;
    try {
        const res = await fetch('/tickets/' + id, { method: 'DELETE' });
        if (res.ok) {
            window.location.reload();
        } else {
            alert('Error al eliminar ticket');
        }
    } catch (e) {
        console.error(e);
        alert('Error de conexión');
    }
}

async function openTicketDetails(id) {
    try {
        const res = await fetch(`/tickets/${id}`);
        if (!res.ok) {
            alert('Error al cargar el ticket');
            return;
        }
        const t = await res.json();
        document.getElementById('ticket-details-title').textContent = t.titulo || '';
        document.getElementById('ticket-details-estado').textContent = t.estado || '';
        document.getElementById('ticket-details-creado').textContent = t.creado_por_nombre || 'Desconocido';
        document.getElementById('ticket-details-asignado').textContent = t.asignado_a_nombre || 'Sin asignar';
        document.getElementById('ticket-details-cliente').textContent = t.cliente_nombre || '-';
        document.getElementById('ticket-details-equipo').textContent = t.equipo_nombre || '-';
        document.getElementById('ticket-details-descripcion').textContent = t.descripcion || 'Sin descripción';
        const creado = t.creado_en ? new Date(t.creado_en) : null;
        const terminado = t.terminado_en ? new Date(t.terminado_en) : null;
        document.getElementById('ticket-details-fecha-creacion').textContent = creado ? creado.toLocaleString() : '-';
        document.getElementById('ticket-details-fecha-termino').textContent = terminado ? terminado.toLocaleString() : '-';
        document.getElementById('ticket-details-modal').classList.remove('hidden');
    } catch (e) {
        console.error(e);
        alert('Error de conexión');
    }
}
</script>

<div id="ticket-details-modal" class="fixed inset-0 bg-black/60 hidden z-50 flex items-center justify-center">
    <div class="bg-slate-900 border border-slate-700 rounded-xl w-full max-w-lg p-6 shadow-2xl">
        <div class="flex justify-between items-start mb-4">
            <div>
                <h3 id="ticket-details-title" class="text-xl font-bold text-white"></h3>
                <p class="text-xs text-slate-400 mt-1">
                    Estado: <span id="ticket-details-estado" class="font-medium"></span>
                </p>
            </div>
            <button type="button" class="text-slate-400 hover:text-white" onclick="document.getElementById('ticket-details-modal').classList.add('hidden')">
                <i class="ph ph-x text-lg"></i>
            </button>
        </div>
        <div class="space-y-2 text-sm text-slate-200">
            <p><span class="font-semibold text-slate-400">Creado por:</span> <span id="ticket-details-creado"></span></p>
            <p><span class="font-semibold text-slate-400">Asignado a:</span> <span id="ticket-details-asignado"></span></p>
            <p><span class="font-semibold text-slate-400">Cliente:</span> <span id="ticket-details-cliente"></span></p>
            <p><span class="font-semibold text-slate-400">Equipo:</span> <span id="ticket-details-equipo"></span></p>
            <p><span class="font-semibold text-slate-400">Fecha creación:</span> <span id="ticket-details-fecha-creacion"></span></p>
            <p><span class="font-semibold text-slate-400">Fecha término:</span> <span id="ticket-details-fecha-termino"></span></p>
            <div class="pt-2">
                <p class="font-semibold text-slate-400 mb-1">Descripción</p>
                <p id="ticket-details-descripcion" class="text-slate-200 whitespace-pre-wrap text-sm"></p>
            </div>
        </div>
        <div class="mt-6 flex justify-end">
            <button type="button" class="px-4 py-2 rounded-lg bg-slate-800 hover:bg-slate-700 text-slate-100 text-sm" onclick="document.getElementById('ticket-details-modal').classList.add('hidden')">
                Cerrar
            </button>
        </div>
    </div>
</div>
