<div class="max-w-7xl mx-auto px-6 py-8">
    <div class="flex justify-between items-center mb-6">
        <h2 class="text-2xl font-bold text-white">Tickets</h2>
        <button onclick="document.getElementById('new-ticket-modal').classList.remove('hidden')" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg transition-colors flex items-center">
            <i class="ph ph-plus mr-2"></i> Nuevo Ticket
        </button>
    </div>

    <div class="card p-6">
        <% if (typeof tickets !== 'undefined' && tickets && tickets.length > 0) { %>
            <div class="overflow-x-auto">
                <table class="w-full text-left border-collapse">
                    <thead>
                        <tr class="text-slate-400 border-b border-slate-700">
                            <th class="py-3 px-4">Título</th>
                            <th class="py-3 px-4">Estado</th>
                            <th class="py-3 px-4">Asignado</th>
                            <th class="py-3 px-4">Equipo</th>
                            <th class="py-3 px-4">Fecha</th>
                            <th class="py-3 px-4">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% tickets.forEach(ticket => { %>
                            <tr class="border-b border-slate-800 hover:bg-slate-900/50">
                                <td class="py-3 px-4 font-medium text-white"><%= ticket.titulo %></td>
                                <td class="py-3 px-4">
                                    <span class="px-2 py-1 rounded text-xs font-medium <%= ticket.estado === 'pendiente' ? 'bg-orange-500/20 text-orange-400' : (ticket.estado === 'en_proceso' ? 'bg-blue-500/20 text-blue-400' : 'bg-green-500/20 text-green-400') %>">
                                        <%= ticket.estado %>
                                    </span>
                                </td>
                                <td class="py-3 px-4 text-slate-300"><%= ticket.asignado_a_nombre || 'Sin asignar' %></td>
                                <td class="py-3 px-4 text-slate-300"><%= ticket.equipo_id || '-' %></td>
                                <td class="py-3 px-4 text-slate-400"><%= new Date(ticket.creado_en).toLocaleDateString() %></td>
                                <td class="py-3 px-4">
                                    <a href="/tickets/<%= ticket.id %>" class="text-blue-400 hover:text-blue-300 mr-2"><i class="ph ph-eye"></i></a>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <div class="text-center py-12">
                <div class="text-slate-500 mb-4 text-5xl"><i class="ph ph-ticket"></i></div>
                <p class="text-slate-400 text-lg">No hay tickets registrados.</p>
                <p class="text-slate-500 text-sm">Crea uno nuevo para comenzar.</p>
            </div>
        <% } %>
    </div>
</div>

<!-- Modal Nuevo Ticket -->
<div id="new-ticket-modal" class="fixed inset-0 bg-black/50 hidden flex items-center justify-center z-50">
    <div class="bg-slate-800 p-6 rounded-xl w-full max-w-md shadow-2xl border border-slate-700">
        <h3 class="text-xl font-bold text-white mb-4">Nuevo Ticket</h3>
        <form action="/tickets" method="POST">
            <div class="mb-4">
                <label class="block text-slate-400 text-sm mb-2">Título</label>
                <input type="text" name="titulo" required class="w-full bg-slate-900 border border-slate-700 rounded p-2 text-white focus:outline-none focus:border-blue-500">
            </div>
            
            <div class="mb-4">
                <label class="block text-slate-400 text-sm mb-2">Cliente (Opcional)</label>
                <select name="cliente_id" class="w-full bg-slate-900 border border-slate-700 rounded p-2 text-white focus:outline-none focus:border-blue-500">
                    <option value="">Seleccionar Cliente</option>
                    <% if (typeof clientes !== 'undefined') { %>
                        <% clientes.forEach(c => { %>
                            <option value="<%= c.id %>"><%= c.nombre %></option>
                        <% }); %>
                    <% } %>
                </select>
            </div>

            <div class="mb-4">
                <label class="block text-slate-400 text-sm mb-2">Asignar a (Notificación por correo)</label>
                <select name="asignado_a" class="w-full bg-slate-900 border border-slate-700 rounded p-2 text-white focus:outline-none focus:border-blue-500">
                    <option value="">Seleccionar Usuario</option>
                    <% if (typeof usuarios !== 'undefined') { %>
                        <% usuarios.forEach(u => { %>
                            <option value="<%= u.id %>"><%= u.nombre %></option>
                        <% }); %>
                    <% } %>
                </select>
            </div>

            <div class="mb-4">
                <label class="block text-slate-400 text-sm mb-2">Descripción</label>
                <textarea name="descripcion" rows="3" class="w-full bg-slate-900 border border-slate-700 rounded p-2 text-white focus:outline-none focus:border-blue-500"></textarea>
            </div>
            <div class="flex justify-end gap-3 mt-6">
                <button type="button" onclick="document.getElementById('new-ticket-modal').classList.add('hidden')" class="px-4 py-2 text-slate-300 hover:text-white">Cancelar</button>
                <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded">Crear</button>
            </div>
        </form>
    </div>
</div>
