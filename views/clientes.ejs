<div class="max-w-7xl mx-auto px-6 py-8">
    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4 mb-8">
        <div class="space-y-2">
            <div class="flex items-center gap-3">
                <h1 class="text-3xl font-bold text-white tracking-tight">Clientes</h1>
                <span class="inline-flex items-center px-3 py-1.5 rounded-full bg-slate-800 text-xs text-slate-200 border border-slate-700">
                    <i class="ph ph-users text-sm mr-1.5"></i>
                    Clientes totales: <span class="ml-1 font-semibold"><%= typeof totalClientes !== 'undefined' ? totalClientes : (clientes && clientes.length ? clientes.length : 0) %></span>
                </span>
            </div>
            <p class="text-slate-400 text-sm">Gestiona y busca rápidamente todos tus clientes.</p>
        </div>
        <div class="flex flex-col sm:flex-row gap-3 w-full md:w-auto">
            <form action="/clientes" method="GET" class="flex-1 flex items-center gap-2">
                <div class="relative w-full">
                    <span class="absolute inset-y-0 left-0 pl-3 flex items-center text-slate-500">
                        <i class="ph ph-magnifying-glass text-sm"></i>
                    </span>
                    <input 
                        type="text" 
                        name="q" 
                        value="<%= typeof query !== 'undefined' ? query : '' %>" 
                        placeholder="Buscar cliente por nombre, empresa o correo" 
                        class="w-full bg-slate-900 border border-slate-700 rounded-lg pl-9 pr-3 py-2 text-sm text-white placeholder-slate-500 focus:outline-none focus:border-blue-500 focus:ring-1 focus:ring-blue-500"
                    >
                </div>
                <button type="submit" class="hidden sm:inline-flex items-center px-3 py-2 bg-slate-800 hover:bg-slate-700 text-slate-100 rounded-lg text-sm transition-colors">
                    Buscar
                </button>
            </form>
            <button onclick="document.getElementById('new-client-modal').classList.remove('hidden')" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-xl transition-colors flex items-center justify-center text-sm font-medium shadow-sm shadow-blue-500/30">
                <i class="ph ph-plus mr-2 text-base"></i> Nuevo Cliente
            </button>
        </div>
    </div>

    <div class="bg-slate-900 border border-slate-800 rounded-2xl shadow-xl p-6">
        <% if (typeof clientes !== 'undefined' && clientes && clientes.length > 0) { %>
            <div class="overflow-x-auto">
                <table class="w-full text-left border-collapse">
                    <thead>
                        <tr class="bg-slate-800/30 text-xs uppercase text-slate-400 font-semibold tracking-wider">
                            <th class="py-3 px-4">Nombre</th>
                            <th class="py-3 px-4">Empresa</th>
                            <th class="py-3 px-4">Correo</th>
                            <th class="py-3 px-4">Número</th>
                            <th class="py-3 px-4">Ubicación</th>
                            <th class="py-3 px-4">Fecha Registro</th>
                            <th class="py-3 px-4">Acciones</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-slate-800">
                        <% clientes.forEach(cliente => { %>
                            <tr class="hover:bg-slate-800/40 transition-colors group">
                                <td class="py-3 px-4 font-medium text-white"><%= cliente.nombre %></td>
                                <td class="py-3 px-4 text-slate-300"><%= cliente.empresa || '-' %></td>
                                <td class="py-3 px-4 text-slate-300">
                                    <% if (cliente.email) { %>
                                        <span class="inline-flex items-center px-2 py-1 rounded-full bg-slate-800 text-xs text-slate-200">
                                            <i class="ph ph-envelope mr-1.5 text-slate-400"></i>
                                            <%= cliente.email %>
                                        </span>
                                    <% } else { %>
                                        <span class="text-slate-500 text-sm">-</span>
                                    <% } %>
                                </td>
                                <td class="py-3 px-4 text-slate-300"><%= cliente.telefono || '-' %></td>
                                <td class="py-3 px-4 text-slate-300"><%= cliente.ubicacion || '-' %></td>
                                <td class="py-3 px-4 text-slate-400"><%= new Date(cliente.creado_en).toLocaleDateString() %></td>
                                <td class="py-3 px-4">
                                    <div class="flex flex-wrap items-center justify-end gap-2">
                                        <button onclick="openEditModal('<%= cliente.id %>', '<%= cliente.nombre %>', '<%= cliente.empresa || '' %>', '<%= cliente.email || '' %>', '<%= cliente.telefono || '' %>', '<%= cliente.ubicacion || '' %>')" class="inline-flex items-center px-3 py-1.5 rounded-full bg-yellow-600/20 hover:bg-yellow-500/30 text-yellow-200 text-xs font-medium border border-yellow-500/40 transition-colors" title="Editar cliente">
                                            <i class="ph ph-pencil-simple text-sm mr-1.5"></i>
                                            Editar
                                        </button>
                                        <button type="button" onclick="deleteClient('<%= cliente.id %>')" class="inline-flex items-center px-3 py-1.5 rounded-full bg-red-600/20 hover:bg-red-600/40 text-red-200 text-xs font-medium border border-red-500/40 transition-colors" title="Eliminar cliente">
                                            <i class="ph ph-trash text-sm mr-1.5"></i>
                                            Eliminar
                                        </button>
                                        <a href="/clientes/<%= cliente.id %>" class="inline-flex items-center px-3 py-1.5 rounded-full bg-slate-800 hover:bg-slate-700 text-slate-200 text-xs font-medium border border-slate-600/60 transition-colors" title="Ver equipos asignados">
                                            <i class="ph ph-desktop text-sm mr-1.5"></i>
                                            Ver equipos
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        <% } else { %>
            <div class="text-center py-12">
                <div class="text-slate-500 mb-4 text-5xl"><i class="ph ph-users"></i></div>
                <p class="text-slate-400 text-lg">No hay clientes registrados.</p>
                <p class="text-slate-500 text-sm">Agrega un nuevo cliente para comenzar.</p>
            </div>
        <% } %>
    </div>
</div>

<script>
async function deleteClient(id) {
    const confirmed = confirm('¿Seguro que deseas eliminar este cliente? Esta acción no se puede deshacer.');
    if (!confirmed) return;
    try {
        const res = await fetch('/clientes/' + id, { method: 'DELETE' });
        if (res.ok) {
            window.location.reload();
        } else {
            alert('Error al eliminar cliente');
        }
    } catch (e) {
        console.error(e);
        alert('Error de conexión');
    }
}

function openEditModal(id, nombre, empresa, email, telefono, ubicacion) {
    document.getElementById('edit-id').value = id;
    document.getElementById('edit-nombre').value = nombre;
    document.getElementById('edit-empresa').value = empresa;
    document.getElementById('edit-email').value = email;
    document.getElementById('edit-telefono').value = telefono;
    document.getElementById('edit-ubicacion').value = ubicacion;
    document.getElementById('edit-client-modal').classList.remove('hidden');
}

async function submitEditClient(e) {
    e.preventDefault();
    const id = document.getElementById('edit-id').value;
    const formData = new FormData(e.target);
    const data = Object.fromEntries(formData.entries());

    try {
        const res = await fetch(`/clientes/${id}`, {
            method: 'PATCH',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(data)
        });
        if (res.ok) {
            window.location.reload();
        } else {
            const err = await res.json();
            alert('Error al actualizar: ' + (err.error || 'Error desconocido'));
        }
    } catch (error) {
        console.error(error);
        alert('Error de conexión');
    }
}
</script>

<!-- Modal Editar Cliente -->
<div id="edit-client-modal" class="fixed inset-0 bg-black/50 hidden flex items-center justify-center z-50">
    <div class="bg-slate-800 p-6 rounded-xl w-full max-w-md shadow-2xl border border-slate-700">
        <h3 class="text-xl font-bold text-white mb-4">Editar Cliente</h3>
        <form onsubmit="submitEditClient(event)">
            <input type="hidden" id="edit-id" name="id">
            <div class="mb-4">
                <label class="block text-slate-400 text-sm mb-2">Nombre</label>
                <input type="text" id="edit-nombre" name="nombre" required class="w-full bg-slate-900 border border-slate-700 rounded p-2 text-white focus:outline-none focus:border-blue-500">
            </div>
            <div class="mb-4">
                <label class="block text-slate-400 text-sm mb-2">Empresa</label>
                <input type="text" id="edit-empresa" name="empresa" class="w-full bg-slate-900 border border-slate-700 rounded p-2 text-white focus:outline-none focus:border-blue-500">
            </div>
            <div class="mb-4">
                <label class="block text-slate-400 text-sm mb-2">Correo</label>
                <input type="email" id="edit-email" name="email" class="w-full bg-slate-900 border border-slate-700 rounded p-2 text-white focus:outline-none focus:border-blue-500">
            </div>
            <div class="mb-4">
                <label class="block text-slate-400 text-sm mb-2">Número</label>
                <input type="text" id="edit-telefono" name="telefono" class="w-full bg-slate-900 border border-slate-700 rounded p-2 text-white focus:outline-none focus:border-blue-500">
            </div>
            <div class="mb-4">
                <label class="block text-slate-400 text-sm mb-2">Ubicación</label>
                <input type="text" id="edit-ubicacion" name="ubicacion" class="w-full bg-slate-900 border border-slate-700 rounded p-2 text-white focus:outline-none focus:border-blue-500">
            </div>
            <div class="flex justify-end gap-3 mt-6">
                <button type="button" onclick="document.getElementById('edit-client-modal').classList.add('hidden')" class="px-4 py-2 text-slate-300 hover:text-white">Cancelar</button>
                <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded">Guardar Cambios</button>
            </div>
        </form>
    </div>
</div>

<!-- Modal Nuevo Cliente -->
